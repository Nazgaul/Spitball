<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"                         
                   assembly="Zbang.Zbox.Domain"
                   namespace="Zbang.Zbox.Domain">

  <class name="Link"
         table="[Link]"
         lazy="true">

    <id name="Id">
      <generator class="native"/>
    </id>

    <property name="Url" not-null="true" length="2000"/>    
    
    <property name="CreationTimeUtc" not-null="false"/>

    <property name="CreationTimeEpochMillis" not-null="false" />

    <property name="IsDeleted" not-null="true"/>

    <property name="UploaderId" not-null="true"/>

    <many-to-one column="BoxId" name="Box" not-null="true"/>

  </class>
  
</hibernate-mapping>