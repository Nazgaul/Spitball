<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Zbang.Zbox.Domain"
                   namespace="Zbang.Zbox.Domain">
  <class name="Box" table="Box">

    <id name="Id" column="BoxId">
      <generator class="native"/>      
    </id>

    <property name="BoxName" not-null="true"/>

    <many-to-one name="Storage" class="Storage" column="StorageId" />

    <property name="CreationTimeUtc" not-null="false"/>
    <property name="PrivacySettings" not-null="true"/>
    <property name="SharePassword" not-null="false"/>
    <property name="uId" not-null="true" />
    
    <set name="Files" table="[File]" cascade="all-delete-orphan" inverse="false" lazy="true">
      <key column="BoxId"/>
      <one-to-many class="File"/>
      <!--<filter name="deletedItemsFilter"/>-->
    </set>    
    <set name="Subscribers" table="SharedBoxSubscribers" cascade="all-delete-orphan" inverse="true" lazy="true">
      <key column="BoxId" />
      <one-to-many class="Subscriber"/>
    </set>
    <set name="Rules" table="NotificationRules" cascade="all-delete-orphan" inverse="true" lazy="true">
      <key column="BoxId" />
      <one-to-many class="NotificationRules"/>
    </set>
    <set name="Comments" table="BoxComment" cascade="all-delete-orphan" inverse="false" lazy="true">
      <key column="BoxId" />
      <many-to-many column="commentId"
         unique="true"
         class="Comment"/>
    </set>    
    <set name="Invitations" table="Invitations" cascade="all-delete-orphan" inverse="true" lazy="true">
      <key column="BoxId"/>
      <one-to-many class="ShareBoxInvitation" />
    </set>
    <set name="Links" table="Link" cascade="all-delete-orphan" inverse="true" lazy="true">
      <key column="BoxId"/>
      <one-to-many class="Link" />
      <!--<filter name="deletedItemsFilter"/>-->
    </set>
    

  </class>  
</hibernate-mapping>