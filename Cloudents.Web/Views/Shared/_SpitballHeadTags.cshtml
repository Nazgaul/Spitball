@{
    string GetUrlBaseOnCulture(string culture)
    {
        var queryString = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(Context.Request.QueryString.Value);
        queryString.Remove("culture");
        //var url = @Context.Request.GetUri().RemoveQueryStringByKey("culture");
        var uriBuilder = new UriBuilder(Context.Request.GetUri());
        return uriBuilder.AddQuery(new { culture }).ToString();
    }
}

<link rel="alternate" hreflang="iw" href="@GetUrlBaseOnCulture(Language.Hebrew.Info.Name)" />
<link rel="alternate" hreflang="en" href="@GetUrlBaseOnCulture(Language.English.Info.Name)" />



