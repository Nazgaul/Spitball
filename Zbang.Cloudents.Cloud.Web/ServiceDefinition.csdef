<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="Zbang.Cloudents.Cloud.Web" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2014-06.2.4">
  <WebRole name="Zbang.Cloudents.Mvc4WebRole" vmsize="Small">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
          <Binding name="Endpoint2" endpointName="Endpoint2" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" />
      <InputEndpoint name="Endpoint2" protocol="https" port="443" certificate="CloudDents" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
      <Import moduleName="RemoteAccess" />
      <Import moduleName="RemoteForwarder" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="StorageConnectionString" />
      <Setting name="CdnEndpoint" />
      <Setting name="ZBox" />
      <Setting name="CacheUse" />
      <Setting name="StorageCdnEndpoint" />
      <Setting name="IsMobileDisabled" />
      <Setting name="AzureSearchApiKey" />
      <Setting name="AzureSeachApiUrl" />
    </ConfigurationSettings>
    <Startup>
      <!--<Task commandLine="startup\disableTimeout.cmd" executionContext="elevated" taskType="simple" />-->
      <!--<Task commandLine="newrelic.cmd" executionContext="elevated" taskType="simple" />
      <Task commandLine="Microsoft.WindowsAzure.Caching\ClientPerfCountersInstaller.exe install" executionContext="elevated" taskType="simple" />-->
    </Startup>
    <Certificates>
      <Certificate name="CloudDents" storeLocation="LocalMachine" storeName="My" />
      <Certificate name="MyIntermediateCertCloudDents" storeLocation="LocalMachine" storeName="CA" />
      <Certificate name="MyRootCertCloudDents" storeLocation="LocalMachine" storeName="Trust" />
    </Certificates>
    <LocalResources>
      <LocalStorage name="ItemPreviewStorage" cleanOnRoleRecycle="true" sizeInMB="100" />
      <LocalStorage name="DiagnosticStore" sizeInMB="20000" cleanOnRoleRecycle="false" />
    </LocalResources>
  </WebRole>
</ServiceDefinition>