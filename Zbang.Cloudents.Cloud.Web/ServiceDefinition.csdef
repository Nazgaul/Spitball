<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="Zbang.Cloudents.Cloud.Web" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2015-04.2.6">
  <WebRole name="Zbang.Cloudents.Mvc4WebRole" vmsize="Small">
    <Runtime executionContext="elevated" />
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
          <Binding name="Endpoint2" endpointName="Endpoint2" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" />
      <InputEndpoint name="Endpoint2" protocol="https" port="443" certificate="Spitball" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
      <Import moduleName="RemoteAccess" />
      <Import moduleName="RemoteForwarder" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="StorageConnectionString" />
      <Setting name="CdnEndpoint" />
      <Setting name="ZBox" />
      <Setting name="CacheUse" />
      <Setting name="StorageCdnEndpoint" />
      <Setting name="AzureSeachServiceName" />
      <Setting name="AzureSearchKey" />
      <Setting name="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString" />
      <Setting name="signalR" />
    </ConfigurationSettings>
    <Certificates>
      <Certificate name="Spitball" storeLocation="LocalMachine" storeName="My" />
    </Certificates>
    <LocalResources>
      <LocalStorage name="ItemPreviewStorage" cleanOnRoleRecycle="true" sizeInMB="30000" />
      <LocalStorage name="DiagnosticStore" sizeInMB="10000" cleanOnRoleRecycle="false" />
    </LocalResources>
    <Startup>
      <Task commandLine="startup/disableTimeout.cmd" executionContext="elevated" taskType="simple" />
    </Startup>
  </WebRole>
</ServiceDefinition>