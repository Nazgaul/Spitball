@using Zbang.Zbox.Mvc3WebRole.Views.Shared.Resources
@using Zbang.Zbox.Mvc3WebRole.App_Start
<!DOCTYPE html>

<html>
<head>
    <title>@SharedResources.MultiMiCloud</title>
    <link rel="SHORTCUT ICON" href="@Url.Content("~/favicon.ico")"/>


    <meta http-equiv="X-UA-Compatible" content="IE=EDGE" />
    <meta charset="utf-8" content="text/html" http-equiv="content-type" />
    <meta name="viewport" content="width=device-width, maximum-scale=1.0" />

    <meta name="title" content="@ViewBag.metaTitle" />
    <meta name="description" content="@ViewBag.metaDescription" />
    <link rel="image_src" href="@Url.CdnContent("/Images/mmcloud.jpg")"" />

    <meta property="og:site_name" content="MultiMi Cloud" />
    <meta property="og:image" content="@Url.CdnContent("/Images/mmcloud.jpg")"/>
    <meta property="og:title" content="@ViewBag.metaTitle"/>
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@Request.Url.AbsoluteUri" />

    @Html.Css2("newcore3")
    @Html.CssRtl("newrtl3")

    @RenderSection("Header", false)
    <!--[if lt IE 9]>
        <script>
        document.createElement('header');
        document.createElement('nav');
