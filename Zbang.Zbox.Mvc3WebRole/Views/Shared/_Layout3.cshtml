</head>
<body>

    <!-- Sidebar here -->
    <aside>
        <a class="navigation" href="/"><header class="txtshd1">cloudents</header></a>
        <div class="header2 txtshd1">Your Academic location online</div>
        @{Html.RenderAction("GetUserDetail3", "Account", true);}

        <a href="@Url.Action("Index", "Dashboard")" class="userAreaBtn navigation">
            <span>My Area</span>
            <div id="btnMy" class="btnArrow"></div>
        </a>
        <a href="@Url.Action("Index", "Library")" class="userAreaBtn lib navigation">
            <span>Library</span>
            <div id="btnLib" class="btnArrow"></div>
        </a>

        <div class="contentBlock" id="invites">
            <div class="contentHeader invitation">Invitations</div>
            <ul data-bind="foreach:invites">
                <li>
                    <a data-bind="attr:{ href: '@Url.Action("Index", "Box")?boxuid=' + id }">
                        <span class="invboxName" data-bind="text: name"></span>
                        <span class="invboxOwner">@Zbang.Zbox.Mvc3WebRole.Views.Shared.Resources.SharedResources.Owner:&nbsp;<span class="ownerName elps" data-bind="text:owner"></span></span>
                    </a></li>
            </ul>
        </div>

