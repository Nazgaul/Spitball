            <div class="contentHeader update">Updates</div>
            <ul>
                <li>Neta Fisher invited you to the box 'Student Pictures 2013'</li>
                <li>Neta Fisher invited you to the box 'Student Pictures 2013'</li>
                <li>Neta Fisher invited you to the box 'Student Pictures 2013'</li>
            </ul>
        </div>

        <div class="ad"></div>
        <div class="ad"></div>*@
    </aside>

    <div class="bodyContent" id="main">
        @RenderBody()
    </div>

    <script type="text/javascript" src="@Url.UICultureContent("~/Js/Resource/ZboxResources.js")" ></script>
    @Html.Script2("cd1")

</body>
</html>
