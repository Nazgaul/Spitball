<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Zbang.Zbox.Domain"
                   namespace="Zbang.Zbox.Domain">
  <class name="Comment" table="Question">
    <id name="Id" column="QuestionId">
      <generator class="assigned"/>
    </id>
    <many-to-one name="User" class="User" column="UserId" not-null="true" foreign-key="userIdQuestion"/>
    <property name="Text" not-null="false" length="8000"></property>
    <many-to-one name="Box" class="Box" column="BoxId" not-null="true" foreign-key="boxIdQuestion"/>
    <property  column="IsSystemGenerated" name="FeedType" not-null="true"/>
    <!--<property name="IsDeleted"/>-->
    <component name="DateTimeUser" class="UserTimeDetails">
      <property name="CreationTime" type="DateTime2" not-null="true" insert="true" update="false" />
      <property name="UpdateTime" type="DateTime2"  not-null="true" insert="true"  />
      <property name="CreatedUser"  not-null="true" insert="true" update="false"/>
      <property name="UpdatedUser"  not-null="true" insert="true" />
    </component>
    <property name="ReplyCount"/>
    <property name="LikeCount"/>
    <!--<property name="LastReplyId"/>-->
    <bag name="Items" inverse="false" lazy="true" cascade="none" >
      <key column="QuestionId" foreign-key="questionIdItems" />
      <one-to-many class="Item"/>
    </bag>
    <bag name="Quizes" inverse="false" lazy="true" cascade="none" >
      <key column="QuestionId" foreign-key="questionIdQuizes" />
      <one-to-many class="Quiz"/>
    </bag>
    <bag name="Flashcards" inverse="false" lazy="true" cascade="none" >
      <key column="QuestionId" foreign-key="questionIdFlashcard" />
      <one-to-many class="FlashcardMeta"/>
    </bag>
    <bag name="Replies" inverse="true" lazy="true" cascade="delete-orphan" >
      <key column="QuestionId" foreign-key="questionIdAnswer"/>
      <one-to-many class="CommentReply"/>
    </bag>
    <!--Need to delete on ourself-->
    <bag name="Updates" inverse="true" lazy="true" cascade="none" >
      <key column="QuestionId" foreign-key="NewUpdatesQuestion"/>
      <one-to-many class="Updates"/>
    </bag>
    <bag name="Likes" inverse="true" lazy="true" cascade="delete-orphan" >
      <key column="CommentId" foreign-key="commentIdCommentLike"/>
      <one-to-many class="CommentLike"/>
    </bag>
  </class>

  <class table="Answer" name="CommentReply">
    <id name="Id" column="AnswerId">
      <generator class="assigned"/>
    </id>
    <many-to-one name="User" class="User" column="UserId" not-null="true" foreign-key="userIdAnswer"/>
    <property name="Text" not-null="false" length="8000"></property>
    <!--<property name="IsDeleted"/>-->
    <many-to-one name="Box" class="Box" column="BoxId" not-null="true" foreign-key="boxIdAnswer"/>
    <many-to-one name="Question" class="Comment" column="QuestionId" not-null="true" foreign-key="questionIdAnswer" index="iQuestion"/>
    <property name="LikeCount"/>
    <component name="DateTimeUser" class="UserTimeDetails">
      <property name="CreationTime" type="DateTime2" not-null="true" insert="true" update="false" />
      <property name="UpdateTime" type="DateTime2"  not-null="true" insert="true"  />
      <property name="CreatedUser"  not-null="true" insert="true" update="false"/>
      <property name="UpdatedUser"  not-null="true" insert="true" />
    </component>
    <bag name="Items" inverse="false" lazy="true" cascade="none" >
      <key column="AnswerId" foreign-key="answerIdAnswer" />
      <one-to-many class="Item"/>
    </bag>
    <!--Need to delete on ourself-->
    <bag name="Updates" inverse="true" lazy="true" cascade="none" >
      <key column="AnswerId" foreign-key="NewUpdatesAnswer"/>
      <one-to-many class="Updates"/>
    </bag>
    
    <bag name="Likes" inverse="true" lazy="true" cascade="delete-orphan" >
      <key column="ReplyId" foreign-key="replyIdReplyLike"/>
      <one-to-many class="ReplyLike"/>
    </bag>
  </class>
</hibernate-mapping>