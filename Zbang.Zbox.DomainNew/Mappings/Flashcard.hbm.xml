<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Zbang.Zbox.Domain"
                   namespace="Zbang.Zbox.Domain">
  <class name="FlashcardMeta" table="Flashcard">
    <id name="Id" column="Id">
      <generator class="assigned"/>
    </id>
    <property name="Name" not-null="false" length="8000"></property>
    <property name="Publish" not-null="true"></property>
    <property name="LikeCount" not-null="true"></property>
    <property name="CardCount" not-null="true"></property>
    <property name="NumberOfViews" not-null="true"></property>
    <!--<property name="Url" not-null="false" length="8000"></property>-->
    <!--<property name="Banner" length="8000"></property>-->

    <many-to-one name="User" class="User" column="UserId" not-null="true" foreign-key="userIdFlashcard"/>
    <many-to-one name="Box" class="Box" column="BoxId" not-null="true" foreign-key="boxIdFlashcard"/>
    <!--<many-to-one column="QuestionId" class="Comment" name="Comment" />-->

    <component name="DateTimeUser" class="UserTimeDetails">
      <property name="CreationTime" type="DateTime2" not-null="true" insert="true" update="false" />
      <property name="UpdateTime" type="DateTime2"  not-null="true" insert="true"  />
      <property name="CreatedUser"  not-null="true" insert="true" update="false"/>
      <property name="UpdatedUser"  not-null="true" insert="true" />
    </component>
    <bag name="Pins" inverse="true" lazy="true" cascade="delete-orphan" >
      <key column="FlashCardId" foreign-key="FlashCardPin"/>
      <one-to-many class="FlashcardPin"/>
    </bag>
   
    <property name="IsDeleted"/>
    <property name="IsDirty" />
  </class>
  
  <class name="FlashcardPin" table="FlashcardPin">
    <id name="Id" column="Id">
      <generator class="assigned"/>
    </id>
    <many-to-one name="Flashcard" class="FlashcardMeta" column="FlashcardId" not-null="true" foreign-key="FlashcardPin" unique-key="FlashcardPinFlashCardIdUserIdIndex"/>
    <many-to-one name="User" class="User" column="UserId" not-null="true" foreign-key="UserPin" unique-key="FlashcardPinFlashCardIdUserIdIndex"/>
    <property name="DateTime" not-null="true" type="DateTime2"></property>
    <property name="Index" column="Position" not-null="true" unique-key="FlashcardPinFlashCardIdUserIdIndex"></property>
  </class>
  <class name="FlashcardSolve" table="FlashcardSolve">
    <id name="Id" column="Id">
      <generator class="assigned"/>
    </id>
    <many-to-one name="Flashcard" class="FlashcardMeta" column="FlashcardId" not-null="true" foreign-key="FlashcardPin" unique-key="FlashcardSolveFlashCardIdUserId"/>
    <many-to-one name="User" class="User" column="UserId" not-null="true" foreign-key="UserPin" unique-key="FlashcardSolveFlashCardIdUserId"/>
    <property name="DateTime" not-null="true" type="DateTime2"></property>
  </class>
  <class name="FlashcardLike" table="FlashcardLike">
    <id name="Id" column="Id">
      <generator class="assigned"/>
    </id>
    <many-to-one name="Flashcard" class="FlashcardMeta" column="FlashcardId" not-null="true" foreign-key="FlashcardLike" unique-key="FlashcardLikeFlashCardIdUserId"/>
    <many-to-one name="User" class="User" column="UserId" not-null="true" foreign-key="UserFlashcardLike" unique-key="FlashcardLikeFlashCardIdUserId"/>
    <property name="DateTime" not-null="true" type="DateTime2"></property>
  </class>
</hibernate-mapping>