<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Zbang.Zbox.Domain"
                   namespace="Zbang.Zbox.Domain">
  <class name="Quiz">
    <id name="Id" column="Id">
      <generator class="assigned"/>
    </id>
    <property name="Name" not-null="false" length="8000"></property>
    <property name="Publish" not-null="true"></property>
    <property name="Content" not-null="false"></property>
    <property name="Rate" not-null="true"></property>
    <property name="NumberOfViews" not-null="true"></property>
    <property name="NumberOfComments" not-null="true"></property>
    <property name="Url" not-null="false" length="8000"></property>

    <many-to-one name="Owner" class="User" column="UserId" not-null="true" foreign-key="userIdQuiz"/>
    <many-to-one name="Box" class="Box" column="BoxId" not-null="true" foreign-key="boxIdQuiz"/>


    <component name="DateTimeUser" class="UserTimeDetails">
      <property name="CreationTime" type="DateTime2" not-null="true" insert="true" update="false" />
      <property name="UpdateTime" type="DateTime2"  not-null="true" insert="true"  />
      <property name="CreatedUser"  not-null="true" insert="true" update="false"/>
      <property name="UpdatedUser"  not-null="true" insert="true" />
    </component>
    <bag name="Questions" inverse="true" lazy="true" cascade="delete-orphan" >
      <key column="QuizId" foreign-key="QuizIdQuestion"/>
      <one-to-many class="Question"/>
    </bag>
    

  </class>

  <class name="Question" table="QuizQuestion">
    <id name="Id" column="Id">
      <generator class="assigned"/>
    </id>
    <property name="Text" not-null="false" length="8000"></property>
    <many-to-one name="Quiz" class="Quiz" column="QuizId" not-null="true" foreign-key="QuizIdQuestion"/>

    <component name="DateTimeUser" class="UserTimeDetails">
      <property name="CreationTime" type="DateTime2" not-null="true" insert="true" update="false" />
      <property name="UpdateTime" type="DateTime2"  not-null="true" insert="true"  />
      <property name="CreatedUser"  not-null="true" insert="true" update="false"/>
      <property name="UpdatedUser"  not-null="true" insert="true" />
    </component>
    <many-to-one name="RightAnswer" foreign-key="RightAnswerIdQuestion"
        column="RightAnswerId" class="Answer"
        not-null="false"/>
    <bag name="Answers" inverse="true" lazy="true" cascade="delete-orphan" >
      <key column="QuestionId" foreign-key="QuestionIdAnswer"/>
      <one-to-many class="Answer"/>
    </bag>
  </class>

  <class name="Answer" table="QuizAnswer">
    <id name="Id" column="Id">
      <generator class="assigned"/>
    </id>
    <property name="Text" not-null="true" length="8000"></property>
    <many-to-one name="Quiz" class="Quiz" column="QuizId" not-null="true" foreign-key="QuizIdAnswer"/>
    <many-to-one name="Question" class="Question" column="QuestionId" not-null="true" foreign-key="QuestionIdAnswer"/>

    <component name="DateTimeUser" class="UserTimeDetails">
      <property name="CreationTime" type="DateTime2" not-null="true" insert="true" update="false" />
      <property name="UpdateTime" type="DateTime2"  not-null="true" insert="true"  />
      <property name="CreatedUser"  not-null="true" insert="true" update="false"/>
      <property name="UpdatedUser"  not-null="true" insert="true" />
    </component>
  </class>

  <class name="SolvedQuiz" table="SolvedQuiz">
    <id name="Id" column="Id">
      <generator class="assigned"/>
    </id>
    <many-to-one name="Quiz" class="Quiz" column="QuizId" not-null="true" foreign-key="QuizIdSolvedQuiz"/>
    <many-to-one name="User" class="User" column="UserId" not-null="true" foreign-key="UserIdSolvedQuiz"/>
    <property name="TimeTaken" not-null="true" ></property>
    <property name="Score" not-null="true" ></property>
    <property name="CreationTime" not-null="true" ></property>
    <bag name="SolvedQuestions" inverse="true" lazy="true" cascade="delete-orphan" >
      <key column="SolvedQuizId" foreign-key="SolvedQuizIdSolvedQuestion"/>
      <one-to-many class="SolvedQuestion"/>
    </bag>
  </class>

  <class name="SolvedQuestion" table="SolvedQuestion">
    <id name="Id" column="Id">
      <generator class="assigned"/>
    </id>
    <many-to-one name="Quiz" class="Quiz" column="QuizId" not-null="true" foreign-key="QuizIdSolvedQuestion"/>
    <many-to-one name="User" class="User" column="UserId" not-null="true" foreign-key="UserIdSolvedQuestion"/>
    <many-to-one name="Answer" class="Answer" column="AnswerId" not-null="true" foreign-key="AnswerIdSolvedQuestion"/>
    <many-to-one name="Question" class="Question" column="QuestionId" not-null="true" foreign-key="QuestionIdSolvedQuestion"/>
    <many-to-one name="SolvedQuiz" class="SolvedQuiz" column="SolvedQuizId" not-null="true" foreign-key="SolvedQuizIdSolvedQuestion"/>
    <property name="Correct" not-null="true" ></property>
  </class>

  <class name="Discussion" table="QuizDiscussion">
    <id name="Id" column="Id">
      <generator class="assigned"/>
    </id>
    <many-to-one name="Quiz" class="Quiz" column="QuizId" not-null="true" foreign-key="QuizIdSolvedQuestion"/>
    <many-to-one name="Owner" class="User" column="UserId" not-null="true" foreign-key="UserIdSolvedQuestion"/>
    <many-to-one name="Question" class="Question" column="QuestionId" not-null="true" foreign-key="QuestionIdSolvedQuestion"/>
    <property name="Text" not-null="true" length="8000"></property>
    <property name="CreationTime" not-null="true" type="DateTime2" ></property>
  </class>


</hibernate-mapping>
