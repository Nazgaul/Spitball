<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Zbang.Zbox.Domain"
                   namespace="Zbang.Zbox.Domain">
  <class name="CourseTag" table="CourseTag">
    <id name="Id" type="guid">
      <generator class="assigned"></generator>
    </id>
    <property name="Name" not-null="true" length="120" unique-key="CourseTagNameCodeProfessor"/>
    <property name="IsDeleted"/>

    <property name="Code" length="120" unique-key="CourseTagNameCodeProfessor"/>
    <property name="Professor" length="120" unique-key="CourseTagNameCodeProfessor"/>
    <property name="Create" not-null="true">
      <column name="CreateTime" not-null="true" sql-type="datetime2(2)"/>
    </property>
    <!--<bag name="Items" inverse="true" lazy="true">
      <key column="CourseTag" foreign-key="iCourseTag"/>
      <one-to-many class="Item"/>
    </bag>-->
    <!--<bag name="Quizzes" inverse="true" lazy="true">
      <key column="Id"/>
      <one-to-many class="Quiz"/>
    </bag>
    <bag name="Flashcards" inverse="true" lazy="true">
      <key column="Id"/>
      <one-to-many class="FlashcardMeta"/>
    </bag>
    <bag name="Comments"  inverse="true" lazy="true">
      <key column="Id" />
      <one-to-many class="Comment"/>
    </bag>-->
    <property name="IsDirty"/>
  </class>


  <class name="ItemTag">
    <id name="Id" type="guid">
      <generator class="guid.comb"></generator>
    </id>
    <many-to-one name="Tag" column="TagId" foreign-key="fTagItemTag" not-null="true" />
    <many-to-one name="Item"  column="ItemId" foreign-key="fTagItemItem" />
    <many-to-one name="Flashcard"  column="FlashcardId" foreign-key="fTagItemFlashcard" />
    <many-to-one name="Quiz"  column="QuizId" foreign-key="fTagItemQuiz" />
  </class>
  
  <class name="Tag">
    <id name="Id" type="guid">
      <generator class="guid.comb"></generator>
    </id>
    <property name="Name" not-null="true" unique="true"/>
    <set name="ItemTags" inverse="true" lazy="true">
      <key column="TagId" foreign-key="fTagItemTag"/>
      <one-to-many class="ItemTag"/>
    </set>
  </class>

</hibernate-mapping>
