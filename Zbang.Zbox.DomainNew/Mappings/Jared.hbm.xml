<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Zbang.Zbox.Domain"
                   namespace="Zbang.Zbox.Domain">
  <class name="ItemTag">
    <id name="Id" type="guid">
      <generator class="guid.comb"></generator>
    </id>
    <many-to-one name="Tag" column="TagId" foreign-key="fTagItemTag" not-null="true" />
    <many-to-one name="Item"  column="ItemId" foreign-key="fTagItemItem" />
    <many-to-one name="Flashcard"  column="FlashcardId" foreign-key="fTagItemFlashcard" />
    <many-to-one name="Quiz"  column="QuizId" foreign-key="fTagItemQuiz" />
    <property name="Type" not-null="true"/>
  </class>

  <class name="CommentTag">
    <id name="Id" type="guid">
      <generator class="guid.comb"></generator>
    </id>
    <many-to-one name="Tag" column="TagId" foreign-key="fTagCommentTag" not-null="true" />
    <many-to-one name="Comment"  column="CommentId" foreign-key="fTagCommentComment" />
    <property name="Type" not-null="true"/>
  </class>
  
  <class name="Tag">
    <id name="Id" type="guid">
      <generator class="guid.comb"></generator>
    </id>
    <property name="Name" not-null="true" unique="true"/>
    <set name="ItemTags" inverse="true" lazy="true">
      <key column="TagId" foreign-key="fTagItemTag"/>
      <one-to-many class="ItemTag"/>
    </set>
    <set name="CommentTags" inverse="true" lazy="true">
      <key column="TagId" foreign-key="fTagCommentTag"/>
      <one-to-many class="CommentTag"/>
    </set>
  </class>

</hibernate-mapping>
