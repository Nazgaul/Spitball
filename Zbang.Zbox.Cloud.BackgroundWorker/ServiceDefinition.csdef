<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="Zbang.Zbox.Cloud.BackgroundWorker" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2013-10.2.2">
  <WorkerRole name="Zbang.Zbox.WorkerRole" vmsize="Small">
    <Imports>
      <Import moduleName="Diagnostics" />
      <Import moduleName="RemoteAccess" />
      <Import moduleName="RemoteForwarder" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="StorageConnectionString" />
      <Setting name="ZBox" />
    </ConfigurationSettings>
    <LocalResources>
      <LocalStorage name="ItemPreviewStorage" cleanOnRoleRecycle="false" sizeInMB="500" />
    </LocalResources>
    <Startup>
      <Task commandLine="newrelic.cmd" executionContext="elevated" taskType="simple" />
    </Startup>
  </WorkerRole>
  
</ServiceDefinition>