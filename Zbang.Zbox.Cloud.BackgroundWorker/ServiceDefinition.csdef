<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="Zbang.Zbox.Cloud.BackgroundWorker" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2014-01.2.3">
  <WorkerRole name="Zbang.Zbox.WorkerRole" vmsize="Small">
    <Imports>
      <Import moduleName="Diagnostics" />
      <Import moduleName="RemoteAccess" />
      <Import moduleName="RemoteForwarder" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="StorageConnectionString" />
      <Setting name="StorageCdnEndpoint" />
      <Setting name="ZBox" />
      <Setting name="SyncHatavotTimeInSeconds" />
    </ConfigurationSettings>
    <LocalResources>
      <LocalStorage name="ItemPreviewStorage" cleanOnRoleRecycle="false" sizeInMB="500" />
    </LocalResources>
  </WorkerRole>
</ServiceDefinition>