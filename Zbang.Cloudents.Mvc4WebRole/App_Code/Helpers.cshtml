@helper UserGamification()
{
    <div class="gamification-header">
        <div class="bg-l"></div>
        <div class="bg-r"></div>
        <div class="gamification-data">
            <span class="title">@GamificationResources.Rank</span>
            <span class="value">38</span>
        </div>
        <div class="middle">
            <div class="image-progress">
                <md-progress-circular md-mode="determinate" value="50" md-diameter="120px"></md-progress-circular>
                <user-image class="img-circle" name="::e.name" image="::e.image" width="35" height="110"></user-image>
