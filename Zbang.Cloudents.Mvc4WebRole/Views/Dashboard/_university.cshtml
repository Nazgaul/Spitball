@using Zbang.Cloudents.Mvc4WebRole.Views.Box.Resources
@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources

<a class="university" ga-track-event="['dashboard', 'to university']" ng-href="{{::u.info.url}}" univeristy-cover="{{::u.info.cover}}" ng-controller="UniversityController as u">
    <img class="universityimg" ng-src="{{::u.info.logo}}" alt="univerisy picture" width="70" height="70"/>
    <div class="universityStats" ng-if="u.loaded">
        <div class="uni-name" ng-bind="::u.info.name"></div>
        <div layout="row" layout-align="space-between center">
            <div>{{::u.info.numOfBoxes | megaNumber}} @GeneralResources.Classes</div>
            <div>{{::u.info.numOfUsers | megaNumber}} @GeneralResources.Members</div>
            <div>{{::u.info.numOfItems | megaNumber}} @BoxResources.Items</div>
        </div>
    </div>
</a>

