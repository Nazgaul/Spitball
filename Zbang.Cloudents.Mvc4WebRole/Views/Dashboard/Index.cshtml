<div class="dashboard">
    <div class="row margin-bottom-20" collapse="!d.inviteToSpitball">
        <div class="col-md-12">
            @{Html.RenderPartial("_Invite");}
        </div>
    </div>
    <div class="row margin-bottom-20" collapse="!d.createBoxOn">
        <div class="col-md-12">
            @{Html.RenderPartial("_Create");}
        </div>
    </div>
    <div class="page-head">
        <div class="page-title">
            <h1>Dashboard</h1>
        </div>
    </div>


    <div class="row" ng-controller="UniversityMeta as um">
        <div class="col-md-6 col-sm-12">
            @{ Html.RenderPartial("_University");}
        </div>
        <div class="col-md-3 col-sm-6">
            @{ Html.RenderPartial("_Leaderboard");}
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="portlet light invite">
                <button type="button" ng-click="d.inviteToSpitball = true" class="portlet-body">
                    @Html.Svg("~/images/site/icons.svg", "invite")
                    Invite friends to spitball
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" ng-repeat="box in d.boxes">
            <a href="{{::box.url}}" class="dashboard-stat2" d-color="{{::box.name.length}}">
                <div class="updates" ng-if="box.updates !== 0">{{box.updates}}</div>
                <div class="display">
                    <div class="number">
                        <h3>{{::box.name}}</h3>
                        <small>{{::box.professor}}</small><br />
                        <small>{{::box.courseCode}}</small>
                    </div>
                </div>
                <div class="progress-info">
                    <div class="progress">
                    </div>
                    <div class="status">
                        <div class="status-title">
                            {{::box.membersCount}} members
                        </div>
                        <div class="status-number">
                            {{::box.itemCount}} items
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
    
</div>
<button type="button" class="add" ng-click="d.createBoxOn = true" ng-hide="d.createBoxOn">+</button>