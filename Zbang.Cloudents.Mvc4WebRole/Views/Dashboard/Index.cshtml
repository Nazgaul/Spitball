<div class="dashboard">
    <div class="row " uib-collapse="!d.inviteOpen">
        <div class="col-md-12">
            @{Html.RenderPartial("_Invite");}
        </div>
    </div>
    <div class="page-head">
        <div class="page-title">
            <h1>Dashboard</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6  col-md-8 col-sm-12">
            @{ Html.RenderPartial("_University");}
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6 leaderboard">
            @{ Html.RenderPartial("_Leaderboard");}
        </div>

        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
            <div class="portlet light invite">
                <button type="button" ng-click="d.inviteToSpitabll()" class="portlet-body">
                    @Html.Svg("~/images/site/icons.svg", "invite")
                    Invite your friends to spitball
                </button>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12  create-box hidden-xs" ng-class="{'create-box-show' : d.createBoxOn}">
            <div class="dashboard-stat2">
                <button ng-hide="d.createBoxOn" type="button" ng-click="d.createBoxOn = true" class="create-btn">
                    <div class="plus">+</div>
                    <div class="title">add study group</div>
                </button>
                <form name="createBox" novalidate ng-submit="cb.create()" ng-show="d.createBoxOn" ng-controller="CreateBoxController as cb">
                    <div layout="column">
                        <md-content>
                            <div layout layout-sm="column">
                                <md-input-container flex>
                                    <label>Enter study group name</label>
                                    <input autocomplete="off" required ng-model="cb.boxName">
                                    <span class="error" ng-show="cb.error">{{cb.error}}</span>
                                </md-input-container>
                            </div>
                        </md-content>

                    </div>
                    <span>
                        <button type="button" class="btn btn-default text-capitalize pull-left" ng-click="d.createBoxOn = false">cancel</button>
                        <button type="submit" class="btn text-capitalize pull-right" ng-disabled="!createBox.$valid">done</button>
                    </span>
                </form>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" ng-repeat="e in d.boxes" ng-include="'box-template.html'"></div>
    </div>
</div>

<button type="button" class="add visible-xs-block" ng-click="d.createBoxOn = true" ng-hide="d.createBoxOn">+</button>