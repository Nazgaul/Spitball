@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources
@using Zbang.Cloudents.Mvc4WebRole.Views.Dashboard.Resources

@using Zbang.Zbox.Infrastructure.Enums
@model Zbang.Cloudents.Mvc4WebRole.Models.CreateBox



<div ng-controller="CreateBoxController">
    <div class="popupWrppr confirm privateBox">
        <header class="popupHeader"><span>@DialogResources.AddPrivateBox</span></header>
        <button class="closeDialog" ng-click="hideModal()"></button>

        <form name="CreateBoxForm" ng-submit="createBox(CreateBoxForm.$valid)" novalidate>
            @Html.LabelFor(m => m.BoxName)
            <div class="validation" ng-show="CreateBoxForm.boxName.$invalid && !CreateBoxForm.boxName.$pristine">Name Error</div>
            <input type="text" name="boxName" class="inputText boxName" ng-model="formData.boxName" required />

            <input type="radio" id="membersOnlyPrivacy" name="privacySettings" value="@BoxPrivacySettings.MembersOnly" ng-model="formData.privacySettings" />
            <label for="membersOnlyPrivacy">@BoxPrivacySettings.MembersOnly.GetEnumDescription()</label>
            <div class="labelExplain explain1">@SharedResources.OnlyPeople</div>

            <input type="radio" id="AnyoneWithUrlPrivacy" name="privacySettings" value="@BoxPrivacySettings.AnyoneWithUrl" ng-model="formData.privacySettings" />
            <label for="AnyoneWithUrlPrivacy">@BoxPrivacySettings.AnyoneWithUrl.GetEnumDescription()</label>
            <div class="labelExplain">@SharedResources.AnyoneWho</div>

            @Html.AntiForgeryToken() @*add ng-model attribute*@

            <input type="submit" class="btn1 next" value="@DialogResources.Create" ng-disabled="CreateBoxForm.$invalid" ng-click="hideModal()"/>
            <button type="reset" class="btn2 cancel" ng-click="reset()">@DialogResources.Cancel</input>

        </form>             
</div>

