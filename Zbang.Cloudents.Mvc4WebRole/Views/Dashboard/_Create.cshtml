@using Zbang.Cloudents.Mvc4WebRole.Views.Dashboard.Resources
@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources
<div id="create" class="dashboard-stat2 color-override backgroundTransparent">
    <form name="createBox" class="create-txt" novalidate ng-submit="cb.create(createBox)" ng-if="d.createBoxOn" ng-controller="CreateBoxController as cb">
        <div layout="column">
            <div layout layout-sm="column">
                <md-input-container flex>
                    <label>@DashboardResource.EnterGroupName</label>
                    <input type="text" autofocus focus-me="d.createBoxFocus" autocomplete="off" required ng-model="cb.boxName" name="name" ng-change="createBox.name.$setValidity('server',true)">
                    <div ng-messages="createBox.name.$error" ng-show="createBox.name.$dirty">
                        <div ng-message="required">@GeneralResources.RequiredField</div>
                        <div ng-message="server">{{cb.error}}</div>
                    </div>
                </md-input-container>
            </div>
        </div>
        <div layout="row" layout-align="end center" class="text-capitalize">
            <button type="button" class="btn btn-default" ga-track-event="['dashboard', 'createbox', 'cancel']" ng-click="cb.cancel(createBox)">@GeneralResources.Cancel</button>
            <button type="submit" class="btn button-Blue btn-primary" ga-track-event="['dashboard', 'createbox', 'done']" ng-disabled="!createBox.$valid || cb.submitDisabled">@GeneralResources.Create</button>
        </div>
    </form>
</div>