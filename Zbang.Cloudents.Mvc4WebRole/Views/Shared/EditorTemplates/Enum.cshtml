@model Enum

@Html.DropDownListFor(m => m, Enum.GetValues(Model.GetType())
.Cast<Enum>()
.Select(m =>
{

    string enumVal = Enum.GetName(Model.GetType(), m);
    return new SelectListItem
               {
        Selected = (Model.ToString() == enumVal),
        Text = m.GetEnumDescription(),
        Value = m.GetStringValue()// Convert.ToInt32(m).ToString(CultureInfo.InvariantCulture)
    };
}), new { Data_bind=ViewData["Data_bind"] , @class=ViewData["class"]})
