@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources
@using Zbang.Cloudents.Mvc4WebRole.Views.Account.Resources
@*@using Zbang.Zbox.Infrastructure.Culture*@
<!DOCTYPE html>

<html>
<head>
    <title>Cloudents</title>
    <link rel="SHORTCUT ICON" href="@Url.Content("~/favicon.ico")" />


    <meta http-equiv="X-UA-Compatible" content="IE=EDGE" />
    <meta charset="utf-8">
    @*<meta name="viewport" content="width=device-width, maximum-scale=1.0" />*@

    <meta name="title" content="Cloudents" />
    <meta name="description" content="Join the social studying revolution at Cloudents" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,300,700&subset=latin,cyrillic-ext' rel='stylesheet' type='text/css'>
    <link rel="image_src" href="@Url.CdnContent("/Images/cloudents.png")" />

    <meta property="fb:app_id" content="450314258355338">
    <meta property="og:site_name" content="Cloudents" />
    <meta property="og:image" content="@Url.CdnContent("/Images/cloudents.png")" />
    <meta property="og:title" content="Cloudents" />
    <meta property="og:type" content="website" />
    <meta id="fb_ShareLink" property="og:url" content="@Request.Url.AbsoluteUri" />

    @Html.Css2("static")
    @Html.CssRtl("staticRtl")
    @Html.CssCulture("lang")

    <!--[if lt IE 9]>
        <script>
        document.createElement('header');
        document.createElement('nav');
        document.createElement('section');
        document.createElement('article');
        document.createElement('aside');
        document.createElement('footer');
        document.createElement('hgroup');
        </script>
    <![endif]-->
    
</head>
<body>
    <!--[if IE]>
    <script>
        if (!window.document.documentMode || window.document.documentMode < 9) {
            window.location = "/Error/Unsupported";
        }
    </script>
    <![endif]-->

    <noscript>
        <div>
            Cloudents works best with javascript enabled
        </div>
    </noscript>
    <div class="wrap">
        <header class="siteHeader headerWpr">
            @{
                var url = Url.Action("Index", "Account");
                if (User != null && User.Identity.IsAuthenticated) {
                    url = Url.Action("Index", "Dashboard") + "?r=siteheader";
                }
            }
            @*<a href="@url" data-version="@VersionHelper.CurrentVersion()"><span class="middle"></span></a>*@
            
            <div class="headerActions rFloat">
                <ul class="userNav">
                    @{Html.RenderAction("GetUserDetail3", "Account", true);}

                    @if (User == null || !(User.Identity.IsAuthenticated))
                    {
                        <li class="navItem">
                            <button type="button" class="headerSettings"></button>
                            <aside class="sideBar">
                                <button class="closeMenu" type="button"></button>
                                <ul>
                                    <li><a href="~/">@HomeResources.Homepage</a></li>
                                    <li><a href="@Url.Action("AboutUs", "Home")">@HomeResources.AboutCloudents</a></li>
                                    <li><a href="@Url.Action("Help", "Home")">@SharedResources.Help</a></li>
                                    <li><a href="@Url.Action("Privacy", "Home")">@FooterResources.PrivacyPolicy</a></li>
                                    <li><a href="@Url.Action("TermsOfService", "Home")">@FooterResources.TermsOfService</a></li>
                                    
                                    <li class="last"><a href="@Url.Action("ContactUs", "Home")">@FooterResources.ContactUs</a></li>
                                    <li><a href="@Url.ActionHash("Welcome","Account", new { universityId = ViewBag.universityId }, "register")">@LogOnResources.SignUp</a></li>
                                    <li class="last"><a href="@Url.ActionHash("Welcome", "Account", new { universityId = ViewBag.universityId }, "connect")">@SharedResources.SignIn</a></li>
                                    @*<li><a data-language="@Languages.GetLanguageDetailByName(Languages.EnglishName).Culture" href="@Url.Action("Index", "Account")" title="English site">@Languages.EnglishName</a></li>
                                    <li><a data-language="@Languages.GetLanguageDetailByName(Languages.RussianName).Culture" href="@Url.Action("Index", "Account")" title="Russian site">@Languages.RussianName</a></li>
                                    <li><a data-language="@Languages.GetLanguageDetailByName(Languages.HebrewName).Culture" href="@Url.Action("Index", "Account")" title="Hebrew site">@Languages.HebrewName</a></li>
                                    <li><a data-language="@Languages.GetLanguageDetailByName(Languages.ArabicName).Culture" href="@Url.Action("Index", "Account")" title="Arabic site">@Languages.ArabicName</a></li>
                                    <li class="last"><a data-language="@Languages.GetLanguageDetailByName(Languages.ChineseName).Culture" href="@Url.Action("Index", "Account")" title="Chinese site">@Languages.ChineseName</a></li>*@
                                </ul>
                            </aside>
                        </li>
                    }
                </ul>
                
            </div>
            <a class="siteLogo" data-version="@VersionHelper.CurrentVersion()" data-navigation="Dashboard" href="@Url.Action("Index", "Dashboard")"></a>
        </header>
        <div class="staticContent">
            @RenderBody()
        </div>
    </div>
     <div id="cssCheck"></div>
    @{
        Html.RenderPartial("_Footer");
    }
    <script type="text/javascript" src="~/Js/CDNFallback.min.js"></script>

    @Html.Script2("General")
    @RenderSection("scripts", false)
    @Html.Script2("home")


</body>
</html>
