@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources

@{
    const string svgUrl = "~/images/site/box-icons.svg";
}
<script type="text/ng-template" id="box-template.html">
    <a href="{{::e.url}}" class="dashboard-stat2">
        <span ng-if="e.recommended" class="ribbon background text-capitalize" d-color="{{::e.name.length}}">@IndexResources.Suggested</span>
        <div class="display">
            <div class="number">
                <h5 d-color="{{::e.name.length}}">{{::e.name}}</h5>
                <small>{{::e.professor}}</small><br />
                <small>{{::e.courseCode}}</small>
            </div>
        </div>
        <div class="progress-info">
            <div class="progress background" d-color="{{::e.name.length}}">
            </div>
            <div class="status">
                <div class="status-title" ng-hide="::e.membersCount === undefined">
                    {{::e.membersCount}} @IndexResources.Members
                </div>
                <div class="status-number" ng-hide="::e.itemCount === undefined">
                    {{::e.itemCount}} @IndexResources.Items
                </div>
            </div>
        </div>
    </a>
</script>

<script type="text/ng-template" id="item-template.html">
    <a class="clearfix item" href="{{::e.url}}">
        <div class="base">
            <div class="item-ratio">
                <div class="content">
                    <img class="img-responsive" ng-src="{{::e.thumbnail}}" width="368" height="520" alt="thumbnail" />
                    <div class="extra" id="drag{{::$index}}">
                        <md-menu>
                            <md-button aria-label="open menu" class="md-icon-button delete" ng-click="app.openMenu($mdOpenMenu, $event)" ga-track-event="['box-items', 'deleteFile']">
                                @Html.Svg("~/images/site/icons.svg", "ThreeDots", new { @class = "dots-3 color-override svgColor6" })
                            </md-button>
                            <md-menu-content width="1">
                                <md-menu-item ng-if="b.canDelete(e.ownerId)">
                                    <md-button aria-label="delete post" ng-click="i.deleteItem($event,e)" ga-track-event="['box-items', 'didDelete']">
                                        @GeneralResources.Delete
                                    </md-button>
                                </md-menu-item>
                                <md-menu-item>
                                    <md-button aria-label="download item" ng-href="{{::e.downloadLink}}" ng-click="i.downloadItem()" target="_blank" ga-track-event="['box-items', 'download']">
                                        @GeneralResources.Download
                                    </md-button>
                                </md-menu-item>
                            </md-menu-content>
                        </md-menu>
                        <h5 class="multi-line-ellipsis color-override textColor3" ng-bind-html="::e.nameExtension"></h5>
                    </div>
                </div>
            </div>
            <div class="stats" ng-hide="::e.numOfViews == undefined">
                <div>
                    {{::e.numOfViews}} @Html.Svg(svgUrl, "eye")
                </div>
                <div>
                    {{::e.likes}} @Html.Svg(svgUrl, "like")
                </div>
            </div>
        </div>
        <div class="extra-details">
            <h5 ng-bind-html="::e.name"></h5>
            <span ng-bind-html="::e.content"></span>
        </div>
    </a>
</script>
<script type="text/ng-template" id="quiz-template.html">
    <a class="quiz" href="{{e.url}}">
        <div class="base">
            <div class="quiz-ratio">
                <div class="content">
                    <div ng-if="e.publish" class="top background" d-color="{{::e.name.length}}">
                        <span class="first-letter" first-letter="{{::e.name}}"></span>
                    </div>
                    <div ng-if="!e.publish" class="top draft-wpr">
                        <span class="draft">@IndexResources.Draft</span>
                    </div>
                    <div class="bottom">
                        <md-menu ng-if="b.canDelete(e.ownerId)">
                            <md-button aria-label="open menu" class="md-icon-button delete" ng-click="app.openMenu($mdOpenMenu, $event)" ga-track-event="['box-quizzes', 'deleteQuiz']">
                                @Html.Svg("~/images/site/icons.svg", "ThreeDots", new { @class = "dots-3 quiz-dots color-override svgColor6" })
                            </md-button>
                            <md-menu-content width="1">
                                <md-menu-item>
                                    <md-button aria-label="delete reply" ng-click="q.deleteQuiz($event,e)" ga-track-event="['box-quizzes', 'didDelete']">
                                        @GeneralResources.Delete
                                    </md-button>
                                </md-menu-item>
                            </md-menu-content>
                        </md-menu>
                        <span class="name ellipsis" ng-bind-html="::e.name"></span>
                        @Html.Svg(svgUrl, "corner", new { @class = "corner", viewBox = "0 0 70 70" })
                    </div>
                </div>


            </div>
            <div class="stats" ng-hide="::e.numOfViews === underfined">
                <div>
                    {{::e.numOfViews}} @Html.Svg(svgUrl, "eye")
                </div>
            </div>
        </div>
        <div class="extra-details">
            <h5 ng-bind-html="::e.name"></h5>
            <span ng-bind-html="::e.content"></span>
        </div>
    </a>
</script>
<script type="text/ng-template" id="user-template.html">
    <a href="{{::e.url}}" class="member">
        <user-image class="img-circle" name="::e.name" image="::e.image" width="35" height="35"></user-image>
        <span class="member-name ellipsis">{{::e.name}}</span>
    </a>
</script>