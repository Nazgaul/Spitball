@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources

@*@{
    const string svgUrl = "~/images/site/box-icons.svg";
}*@
<script defer type="text/ng-template" id="box-template.html">
    <a ng-href="{{::e.url}}" class="box-template box-style" ga-track-event="['dashboard', 'box']">
        <span ng-if="e.recommended" class="ribbon background text-capitalize" d-color="{{::e.name.length}}">@IndexResources.Suggested</span>
        <div class="display">
            <div class="number">
                <h5 d-color="{{::e.name.length}}" ng-bind="::e.name"></h5>
                <small class="ellipsis" ng-bind="::e.professor"></small><br />
                <small class="ellipsis" ng-bind="::e.courseCode"></small>
            </div>
        </div>
        <div class="progress-info">
            <div class="progress background" d-color="{{::e.name.length}}"></div>
            <div class="status">
                <div class="status-title" ng-hide="::e.membersCount === undefined">
                    {{::e.membersCount}} @GeneralResources.Members
                </div>
                <div class="status-number" ng-hide="::e.itemCount === undefined">
                    {{::e.itemCount}} @IndexResources.Items
                </div>
            </div>
        </div>
    </a>
</script>

<script defer type="text/ng-template" id="item-template.html">
    <a class="clearfix item item-template" ng-href="{{::e.url}}">
        <div class="base">
            <div class="item-ratio">
                <div class="content">
                    <img class="img-responsive" ng-src="{{e.thumbnail}}" width="368" height="520" alt="{{::e.nameExtension}}" />
                    <div class="extra" id="drag{{::$index}}">
                        <h2 class="multi-line-ellipsis" ng-bind-html="::e.nameExtension"></h2>
                    </div>
                </div>
            </div>
            <div class="stats" ng-hide="::e.numOfViews == undefined">
                <div class="views">
                    {{::e.numOfViews}} <md-icon md-svg-icon="b:eye"></md-icon>@*@Html.Svg(svgUrl, "eye")*@
                </div>
                <div class="likes">
                    {{::e.likes}} <md-icon md-svg-icon="b:like"></md-icon>@*@Html.Svg(svgUrl, "like")*@
                </div>
            </div>
        </div>
        <div class="extra-details">
            <h5 ng-bind-html="::e.name"></h5>
            <span ng-bind-html="::e.content"></span>
        </div>
    </a>
</script>
<script defer type="text/ng-template" id="quiz-template.html">
    <a class="quiz quiz-template" ng-href="{{::e.url}}">
        <div class="base">
            <div class="quiz-ratio">
                <div class="content">
                    <div ng-if="::e.publish" class="top background" d-color="{{::e.name.length}}">
                        <span class="first-letter" first-letter="{{::e.name}}"></span>
                    </div>
                    <div ng-if="::!e.publish" class="top draft-wpr">
                        <span class="draft">@IndexResources.Draft</span>
                    </div>
                    <div class="bottom">
                        <h2 class="name ellipsis" ng-bind-html="::e.name"></h2>
                    </div>
                </div>


            </div>
            <div class="stats" ng-hide="::e.numOfViews === underfined">
                <div class="views">
                    {{::e.numOfViews}} <md-icon md-svg-icon="b:eye"></md-icon>@*@Html.Svg(svgUrl, "eye")*@
                </div>
            </div>
        </div>
        <div class="extra-details">
            <h5 ng-bind-html="::e.name"></h5>
            <span ng-bind-html="::e.content"></span>
        </div>
    </a>
</script>
<script defer type="text/ng-template" id="user-template.html">
    <a ng-href="{{::e.url}}" class="member">
        <user-image class="img-circle" name="::e.name" image="::e.image" width="35" height="35"></user-image>
        <span class="member-name ellipsis" ng-bind="::e.name"></span>
    </a>
</script>
<script defer type="text/ng-template" id="scrollToTopTemplate.html">
    <div class="scroll-to-top">
        <md-icon md-svg-icon="t:arrow"></md-icon>
        @*@Html.Svg("~/images/site/icons.svg", "arrow")*@
    </div>
</script>