<div class="portlet light leaderboad leaderboardbox" ng-controller="LeaderboardController as lb">
    <div class="portlet-body">
        <h4 class="uppercase">the best in class</h4>
        
        <md-progress-circular ng-if="l.loading" md-mode="indeterminate" class="circle-loading"></md-progress-circular>
        <div class="r-table">
            <div class="r-table-row" ng-repeat="l in lb.leaderboard">
                <div class="r-table-cell">
                    <user-image class="img-circle" name="l.name" image="l.image" width="30" height="30"></user-image>
                    <span class="user-name">{{::l.name}}</span>
                </div>
                <div class="r-table-cell">{{::$index + 1}}</div>
                <div class="r-table-cell last">{{::l.score | megaNumber}} pts</div>
            </div>
        </div>
    </div>
</div>
