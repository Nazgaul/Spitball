@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources
@model string
<div class="portlet light leaderboard leaderboardbox color-override backgroundColor5" ng-controller="LeaderboardController as lb">
    <div class="portlet-body">
        <h4 class="uppercase color-override textColor1">@Model</h4>

        <md-progress-circular ng-if="l.loading" md-mode="indeterminate" class="circle-loading"></md-progress-circular>
        <div class="r-table" user-not-register-click>
            <div class="r-table-row" ng-repeat="l in lb.leaderboard">
                <div class="r-table-cell">
                    <a href="{{::l.url}}" ga-track-event="['leaderboard', 'userPage']">
                        <user-image class="img-circle" name="l.name" image="l.image" width="30" height="30"></user-image>
                        <span class="user-name color-override textColor1">{{::l.name}}</span>
                    </a>
                </div>
                <div class="r-table-cell">{{::$index + 1}}</div>
                <div class="r-table-cell last color-override textColor8">{{::l.score | megaNumber}} @IndexResources.Pts</div>
            </div>
        </div>
    </div>
</div>
