@using Zbang.Cloudents.Mvc4WebRole.Views.User.Resources
<div class="content">
    <div class="users" layout="row" layout-padding layout-wrap vs-repeat="65" vs-scroll-parent="window">
        <a ui-sref="user({userId:user.id,userName:user.name})" class="user-data" ng-repeat="user in g.leaderboard track by user.id">
            <div class="content">
                <div class="rank">
                    <span ng-bind="::($index+1 + startIndex)"></span>
                </div>
                <user-image class="img-circle" name="user.name" image="user.image" width="45" height="45"></user-image>
                <div class="progress-user">
                    <md-progress-linear class="custom-progress-bar" md-mode="determinate" value="{{::user.progress}}"></md-progress-linear>
                    <div dir="auto" class="name"><span class="ellipsis" ng-bind="::user.name"></span></div>
                </div>

                <div class="text">
                    <div class="points" ng-bind="::user.score | megaNumber : 2"></div>
                    <div ng-bind="::user.levelName"></div>
                </div>
            </div>
        </a>

    </div>
</div>