@model Zbang.Cloudents.Mvc4WebRole.Models.CreateDepartment
@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources
@using Zbang.Cloudents.Mvc4WebRole.Views.Library.Resources


<div class="createDept" ng-style="{display: display.createDep ? 'block' : 'none'}">
    <form novalidate name="createDepartmentForm" ng-submit="createDepartmentSubmit(createDepartmentForm.$valid)">
        @*@{Html.RenderAction("AntiForgeryToken", "Home", true);}*@
        @*@Html.ValidationSummary(true)*@

        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "inputText", ng_model = "formData.createDepartment.name", required = "required" })
        <button type="submit" class="btn1 rFloat" ng-disabled="createDepartmentForm.$invalid">@DialogResources.Create</button>
        <button type="button" class="btn2 rFloat" ng-click="backCreateDepartment()">@SharedResources.Back</button>
    </form>
</div>