@{
    var model = ViewBag.categories as IList<CategoryDto> ?? new List<CategoryDto>();


}
@helper Category(IEnumerable<CategoryDto> categories)
{
    <ul>
        @foreach (var sub in categories)
        {
            <li><a href="@Url.RouteUrl("storeCategory", new { categoryid = sub.Id, categoryname="ram"})">@sub.Name</a></li>
        }
    </ul>
}
