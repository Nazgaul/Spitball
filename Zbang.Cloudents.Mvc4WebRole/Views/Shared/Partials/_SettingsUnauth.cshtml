@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources
@using Zbang.Cloudents.Mvc4WebRole.Views.Account.Resources
@using Zbang.Zbox.Infrastructure.Culture
@model Zbang.Cloudents.Mvc4WebRole.Models.SettingsUnauth

@helper ShowLanguageBar(bool displayLanguage = false)
{
    if (!displayLanguage)
    {
        return;
    }
    <ul class="@System.Threading.Thread.CurrentThread.CurrentUICulture.Name">
        <li><button type="button" ng-click="changeLocale('@Languages.GetLanguageDetailByName(Languages.EnglishUsName).Culture')" @*href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.EnglishUsName).Culture })"*@ title="English (US)">@Languages.EnglishUsName</button></li>
        <li><button type="button" ng-click="changeLocale('@Languages.GetLanguageDetailByName(Languages.EnglishGbName).Culture')" @*href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.EnglishGbName).Culture })"*@ title="English (UK)">@Languages.EnglishGbName</button></li>
        <li><button type="button" ng-click="changeLocale('@Languages.GetLanguageDetailByName(Languages.RussianName).Culture')" @*href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.RussianName).Culture })"*@ title="Russian Site">@Languages.RussianName</button></li>
        <li><button type="button" ng-click="changeLocale('@Languages.GetLanguageDetailByName(Languages.HebrewName).Culture')" @*href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.HebrewName).Culture })"*@ title="Hebrew Site">@Languages.HebrewName</button></li>
        <li><button type="button" ng-click="changeLocale('@Languages.GetLanguageDetailByName(Languages.ArabicName).Culture')" @*href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.ArabicName).Culture })"*@ title="Arabic Site">@Languages.ArabicName</button></li>
        <li class="last"><button type="button" ng-click="changeLocale('@Languages.GetLanguageDetailByName(Languages.ChineseName).Culture')" @*href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.ChineseName).Culture })"*@ title="Chinese Site">@Languages.ChineseName</button></li>
    </ul>
}

<aside class="sideBar">
    <label for="sidebarCb" class="closeMenuBtn">
        @Html.Svg("~/Images/Defs.svg", "close", new { @class = "svg-close" })
    </label>
    <ul>
        <li ng-class="::{currentItem : true}"><a href="~/">@HomeResources.Homepage</a></li>
        <li><a href="@Url.Action("AboutUs", "Home")" target="_self">@HomeResources.AboutCloudents</a></li>
        <li><a href="@Url.Action("jobs","home")" target="_self">@SharedResources.Jobs</a></li>
        <li><a href="@Url.Action("Help", "Home")" target="_self">@SharedResources.Help</a></li>
        <li><a href="@Url.Action("Privacy", "Home")" target="_self">@FooterResources.PrivacyPolicy</a></li>
        <li><a href="@Url.Action("TermsOfService", "Home")" target="_self">@FooterResources.TermsOfService</a></li>
        <li class="last"><a href="@Url.Action("ContactUs", "Home")" target="_self">@FooterResources.ContactUs</a></li>
        @if (Model.ShowLogIn)
        {
            <li class="addRegister" login-btn="register">@LogOnResources.SignUp</li>
            <li class="last addConnect" login-btn="connect">@SharedResources.SignIn</li>
        }
    </ul>
    @ShowLanguageBar(Model.ShowLanguage)
</aside>
