@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources
<div ng-view></div>
<div id="quizCreate" ng-controller="QuizCreateCtrl">
    <div ng-if="params.loadCreateQuiz">
        <div ng-show="params.showCreateQuiz" ng-include="'/Quiz/CreateQuiz'" onload="showQuiz()"></div>
    </div>
</div>
@section scripts
{
    @Html.Script2("angular-general")
    @Html.Script2("angular-layout3")
    @Html.Script2("angular-store")

    @if (!string.IsNullOrEmpty(Request.QueryString["new"]))
    {
        <!-- Facebook Conversion Code for Sign up through FB ad -->
        <script type="text/javascript">
            var fb_param = {};
            fb_param.pixel_id = '6013174718407';
            fb_param.value = '0.00';
            fb_param.currency = 'USD';
            (function () {
                var fpw = document.createElement('script');
                fpw.async = true;
                fpw.src = '//connect.facebook.net/en_US/fp.js';
                var ref = document.getElementsByTagName('script')[0];
                ref.parentNode.insertBefore(fpw, ref);
            })();
            ga('send', 'event', 'Registration', 'CompletedSignUp');
        </script>
        <noscript><img height="1" width="1" alt="" style="display: none" src="https://www.facebook.com/offsite_event.php?id=6013174718407&value=0&currency=USD" /></noscript>
    }
}
@section search {
    <form name="searchHeaderForm" class="dashLibSearch" ng-controller="SearchHeaderCtrl" ng-submit="fullSearch(searchHeaderForm.$valid)" novalidate>
        @*ng-class="{showSearch : $root.isSearch()}"*@
    <input autocomplete="off" ng-keyup="search()" ng-blur="searchFocusout()" ng-focus="searchFocus()"
           type="search" name="query" required ng-model="formData.query" class="dashLibSearchInput"
           ng-placeholder="@SharedResources.Search" />
    <button id="searchDropDownBtn" ng-disabled="!formData.query.length" type="submit"></button>
    <div class="searchDD allResults" ng-style="{display: params.showDropdown? 'block' : 'none'}" ng-class="{noResults : resultCount() === 0}" bindonce ng-mouseover="params.hover = true" ng-mouseout="params.hover = false">
        <span ng-if="searchResults.boxes.length">
            <h3>@SharedResources.Courses / @SharedResources.GroupBoxes</h3>
            <ul class="searchList boxes">
                <li ng-repeat="box in searchResults.boxes" ng-include="'boxHeaderSearch'"></li>
            </ul>
        </span>
        <span ng-if="searchResults.items.length">
            <h3>@SharedResources.Materials</h3>
            <ul class="searchList items">
                <li ng-repeat="item in searchResults.items" ng-include="'itemHeaderSearch'"></li>
            </ul>
        </span>
        <span ng-if="searchResults.people.length">
            <h3>@SharedResources.People</h3>
            <ul class="searchList people">
                <li ng-repeat="person in searchResults.people" ng-include="'personHeaderSearch'"></li>
            </ul>
        </span>
        <span ng-if="searchResults.otherItems.length">
            <h3>@SharedResources.ResultsOther</h3>
            <ul class="searchList university">
                <li ng-repeat="item in searchResults.otherItems" ng-include="'itemHeaderSearch'"></li>
            </ul>
        </span>
        <a class="showAll" ng-href="{{'/search/?q=' + formData.query}}">@SharedResources.AllResults&nbsp;<q>{{formData.query}}</q></a>
        <div class="emptySearch">@SharedResources.NoResults</div>
    </div>
</form>
}