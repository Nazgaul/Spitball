<md-sidenav ng-show="app.chatOpened" ng-cloak class="chat md-sidenav-right"
            md-component-id="chat" close-menu="right">
    <md-content ng-controller="ChatController as c">
        <div class="menu-content">
            <div class="header">
                <div class="chat-icon" ng-click="app.toggleChat()">
                    @Html.Svg("~/images/site/icons.svg", "chat")
                    <div class="chat-counter">16</div>
                </div>
                <div class="tabs">
                    <button type="button" ng-click="c.state = c.states.messages" class="messages tab">Messages</button>
                    <button type="button" ng-click="c.friendsState()" class="friends tab">Friends</button>
                </div>
            </div>
            <div class="tab-content" ng-class="{noChats: c.state === c.states.messages && !c.users.length}">
                <div class="empty-state">
                    @Html.Svg("~/images/site/icons.svg", "empty-chat")
                    <div class="text">
                        <span>No Messages, yet.</span>
                        Start chatting with your friends in Spitball
                    </div>
                </div>
                <form novalidate class="search-friend" ng-if="c.state === c.states.friends" ng-submit="c.search()">
                    <input type="search" placeholder="Search for students" ng-model="c.term" ng-change="c.search()" ng-model-options="{debounce : 1000}" />
                    <button type="submit" class="search-btn">
                        @Html.Svg("~/images/site/icons.svg", "searchIcon", new { @class = "searchIcon" })
                    </button>
                </form>
                <ul class="users-list" ng-slimscroll height="calc(100vh - 155px)" color="#BBB">
                    <li ng-repeat="e in c.users track by e.id" ng-class="::{online: e.online}">
