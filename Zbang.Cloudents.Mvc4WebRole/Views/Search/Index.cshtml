@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources
<div class="searchPage page" ng-controller="SearchCtrl" bindonce>
    <div id="sTabsMenu" class="sTabs sTab1">
        <button type="button" ng-click="setCurrentTab('sTab1')">@SharedResources.Courses</button>
        <button type="button" ng-click="setCurrentTab('sTab2')">@SharedResources.Materials</button>
        <button type="button" ng-click="setCurrentTab('sTab3')">@SharedResources.Members</button>
    </div>
    <div class="arrow upArrow"></div>
    <h2 class="semiFont"><span class="sResult">@SharedResources.ResultsFor&nbsp;</span><span class="sResult">@SharedResources.SearchingFor&nbsp;</span><q>{{params.search}}</q></h2>
    <div class="sTabContent" ng-style="{noResults : params.noResults}">
        <section class="sCourses" data-list="@SharedResources.Courses">
            <ul class="sCourseList">
                <li class="box sCourseItem" ng-repeat="box in data.boxes">
                    <a bo-href="box.url">
                        <img class="lFloat boxImg" alt="" width="77" height="98" bo-src="box.image">
                        <div class="sTitle elps" bo-html="box.name | highlight:params.query:false"></div>
                        <span class="sDetail" bo-class="{allDetails: box..proffessor && box.courseCode}" bo-html="box.proffessor | highlight:params.query:false"></span>
                        <span class="sDetail" bo-html="box.courseCode | highlight:params.query:false"></span>
                    </a>
                </li>
            </ul>
        </section>
        <section class="sMaterials" data-list="@SharedResources.Materials">
            <ul class="sMaterialsList">
                <li class="sMaterialsItem clearfix" ng-repeat="item in data.items" ng-include="'sMaterialItemTemplate'">               
                </li>
            </ul>
            <div class="splitHR"><span class="splitHRText">@SharedResources.ResultsOther</span></div>
            <ul id="sOtherMaterialsList" class="sMaterialsList" data-list="@SharedResources.Materials"></ul>
            <button id="sOtherMaterialsBtn" class="sOtherMaterialsBtn">@SharedResources.ResultsOther</button>
        </section>
        <section class="sMembers" data-list="@SharedResources.Members">
            <ul class="sMembersList">
                <li class="userItem" user-tooltip-popup="{{user.id}}">
                    <a bo-href="item.url">
                        <img class="userItemImg" bo-src="user.image" width="74" height="74" />
                    </a>
                    <div class="userItemName" bo-html="user.name | highlight:params.query:false"></div>
                </li>
            </ul>
        </section>
        <div class="emptySearch">@SharedResources.NoResults</div>
    </div>
</div>

<script type="text/ng-template" id="sMaterialItemTemplate">
    <a class="sMaterialLink" bo-href="item.url">
        <div class="sOtherUni semiFont" bo-class="{dot: item.uniName}" bo-text="item.uniName"></div>
        <img class="lFloat imgBorder sMaterialImg" alt="" width="110" height="141" bo-src="item.image">
        <div class="sTitle elps" bo-html="item.name | highlight:params.query:false"></div>
        <div class="sSnippet" bo-html="item.content | highlight:params.query:false"></div>
        <div class="stars">
            <div class="full" bo-style="{width: itemRating(item.rate)}"></div>
        </div>
        <div data-title="@SharedResources.Views" class="views" bo-text="item.views || 0"></div>
    </a>
</script>