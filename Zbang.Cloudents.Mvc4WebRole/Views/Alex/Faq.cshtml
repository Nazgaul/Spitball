	Layout ="~/Views/Alex/_LayoutStatic.cshtml";
}
@*<!doctype html>
<html class="no-js">
<head>
	<meta charset="utf-8">
	<title>Alex</title>
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
