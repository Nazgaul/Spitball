<div class="class">
    <div class="row">
        <div class="col-lg-2 col-md-4 col-sm-4 col-xs-6" ng-repeat="quiz in q.quizzes">
            <div class="quiz" ng-class="q.quizBgColor(quiz.name)">
                <div class="top">
                    <span class="first-letter">{{::q.getQuizLetter(quiz.name)}}</span>
                </div>
                <div class="bottom">
                    <div class="name">{{::quiz.name}}</div>
                    <div class="dogear"></div>
                </div>
                <div class="stats">
                    <div class="pull-left">
                        {{::quiz.rate}} @Html.Svg("~/images/site/box-icons.svg", "like")
                    </div>
                    <div class="pull-right">                        
                        @Html.Svg("~/images/site/box-icons.svg", "eye") {{::quiz.numOfViews}}
                    </div>
                </div>
                <div class="details">
                    <div class="name">{{::quiz.name}}</div>
                    <div class="first-letter">{{::q.getQuizLetter(quiz.name)}}</div>
                    <div class="more">
                        <div class="owner">{{::quiz.owner}}</div>
                        <div class="date" display-time="{{quiz.date}}"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>