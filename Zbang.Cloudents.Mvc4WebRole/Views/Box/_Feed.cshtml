<div class="row">
    <div class="col-md-6">
        <div class="portlet light ">
            <div class="portlet-body" id="chats">
                @*<div class="scroller" style="height: 341px;" data-always-visible="1" data-rail-visible1="1">*@
                <div class="chat-form">
                    <div class="input-cont">
                        <input class="form-control" type="text" placeholder="Type a message here..." />
                    </div>
                    <div class="btn-cont">
                        <span class="arrow">
                        </span>
                        <a href="" class="btn blue icn-only">
                            <i class="fa fa-check icon-white"></i>
                        </a>
                    </div>
                </div>
                <ul class="chats">
                    <li class="in" ng-repeat="post in f.data">
                        <user-image class="avatar" name="::post.userName" image="::post.userImage" width="45" height="45"></user-image>
                        <div class="message">
                            <span class="name">{{::post.userName}}</span>
                            <span class="datetime" display-time="{{::post.creationTime}}"></span>
                            <span class="body" ng-bind-html="::post.content"></span>

                            <ul class="list-inline items-container">
                                <li ng-repeat="item in post.files">
                                    <a class="item" href="{{::item.url}}">
                                        <div class="content">
                                            <img class="img-responsive" src="{{::item.thumbnail}}" alt="">
                                            <div class="extra">
                                                <h5>{{::item.name}}</h5>
                                                <img src="http://lorempixel.com/30/30/" alt="" />
                                             
                                            </div>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                            <div class="likes">
                                <div class="pull-left btn blue">
                                    <span> 15 Likes </span>
                                    @Html.Svg("~/images/site/box-icons.svg", "share", new { @class = "like" })
                                </div>
                                <div class="comment">
                                    <span>Comments</span>
                                </div>
                                @Html.Svg("~/images/site/box-icons.svg", "share", new { @class = "share" })
                            </div>
                        </div>
                        <ul>
                            <li class="out" ng-repeat="reply in post.answers">
                                <user-image class="avatar" name="::reply.userName" image="::reply.userImage" width="45" height="45"></user-image>
                                <div class="message">
                                    <span class="name">{{::reply.userName}}</span>
                                    <span class="datetime" display-time="{{::post.creationTime}}"></span>
                                    <span class="body" ng-bind-html="::reply.content">
                                    </span>
                                    <ul class="list-inline items-container">
                                        <li ng-repeat="item in reply.files">
                                            <a class="item" href="{{::item.url}}">
                                                <div class="content">
                                                    <img class="img-responsive" src="{{::item.thumbnail}}" alt="">
                                                    <div class="extra">
                                                        <h5>{{::item.name}}</h5>
                                                        <img src="http://lorempixel.com/30/30/" alt="" />

                                                    </div>
                                                </div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        @{ Html.RenderPartial("_LeaderBoard");}

        <div class="row margin-top-10" ng-controller="RecommendedController as r">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" ng-repeat="box in r.boxes">
                <a href="{{box.url}}" class="dashboard-stat2" d-color="{{box.name.length}}">
                    <div class="display">
                        <div class="number">
                            <h3>{{box.name}}</h3>
                            <small>{{box.courseCode}}</small>
                        </div>
                    </div>
                    <div class="progress-info">
                        <div class="progress">
                        </div>
                        <div class="status">
                            <div class="status-title">
                                {{box.membersCount}} members
                            </div>
                            <div class="status-number">
                                {{box.itemCount}} items
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
