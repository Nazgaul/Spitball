@{
    const string url = "~/images/site/uploadIcons.svg";
}
<div class="row">
    <div class="col-lg-6 col-md-8 col-sm-12">
        <div class="portlet light">
            <div class="portlet-body feed">
                <form class="add-comment">
                    <textarea type="text" placeholder="what's on your mind?"></textarea>
                    <div class="add-comment-button">
                        <a plupload="f.fileUpload.url" 
                           plupload-options="f.fileUpload.options" plupload-callbacks="f.fileUpload.callbacks">
                            @Html.Svg(url, "file", new { @class = "file" })
                        </a>
                        <button type="button">@Html.Svg(url, "googleDrive")</button>
                        <button type="button">
                            @Html.Svg(url, "dropbox")
                        </button>
                        <button type="button">
                            @Html.Svg(url, "link", new { @class = "link" })
                        </button>
                        <button type="submit" class="btn pull-right">POST</button>
                        <button type="button" class="pull-right">
                            @Html.Svg("~/images/site/box-icons.svg", "anonymous", new { @class = "anonymous" })
                        </button>
                    </div>
                </form>
                <ol class="list-unstyled">
                    <li ng-repeat="post in f.data" class="comment">
                        <div class="top">
                            <user-image class="img-circle c-img" name="::post.userName" image="::post.userImage" width="40" height="40"></user-image>
                            <span class="user-name">{{::post.userName}}</span> at
                            <span>{{::post.creationTime | date : 'MMM d,yyyy H:m'}}</span>
                            <div ng-bind-html="::post.content"></div>
                        </div>
                        <ul class="list-inline items-container">
                            <li ng-repeat="item in post.files">
                                <a class="item" href="{{::item.url}}">
                                    <div class="content">
                                        <img class="img-responsive" ng-src="{{::item.thumbnail}}" alt="">
                                        <div class="extra">
                                            <h5>{{::item.name}}</h5>
                                            <img src="http://lorempixel.com/30/30/" alt="" />

                                        </div>
                                    </div>
                                </a>
                            </li>
                        </ul>
                        <div class="actions">
                            <button type="button" class="text-capitalize like margins">15 like</button>
                            <button type="button" class=" text-capitalize margins">comment</button>
                            <button type="button" class="margins">share</button>
                        </div>
                        <ol class="list-unstyled replies" ng-if="post.answers.length">
                            <li ng-repeat="reply in post.answers" class="reply">
                                <div class="top">
                                    <user-image class="img-circle c-img" name="::reply.userName" image="::reply.userImage" width="40" height="40"></user-image>
                                    <span class="user-name">{{::reply.userName}}</span> at
                                    <span>{{::reply.creationTime | date : 'MMM d,yyyy H:m'}}</span>
                                    <div ng-bind-html="::reply.content"></div>
                                </div>
                                <ul class="list-inline items-container">
                                    <li ng-repeat="item in reply.files">
                                        <a class="item" href="{{::item.url}}">
                                            <div class="content">
                                                <img class="img-responsive" ng-src="{{::item.thumbnail}}" alt="">
                                                <div class="extra">
                                                    <h5>{{::item.name}}</h5>
                                                    <img src="http://lorempixel.com/30/30/" alt="" />

                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                                <div class="actions padding">
                                    <button type="button" class="text-capitalize like margins">15 like</button>
                                    <button type="button" class="text-capitalize margins">share</button>
                                </div>
                            </li>
                        </ol>
                    </li>
                </ol>
