            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-4 col-sm-12">
        @{ Html.RenderPartial("_LeaderBoard");}

        <div class="portlet light invite">
            <button type="button" ng-click="b.inviteToBox()" class="portlet-body">
                @Html.Svg("~/images/site/icons.svg", "invite")
                Invite your friends to spitball
            </button>
        </div>

        <div class="row margin-top-10" ng-controller="RecommendedController as r">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" ng-repeat="box in r.boxes">
                <a href="{{box.url}}" class="dashboard-stat2" d-color="{{box.name.length}}">
                    <div class="display">
                        <div class="number">
                            <h3>{{box.name}}</h3>
                            <small>{{box.courseCode}}</small>
                        </div>
                    </div>
                    <div class="progress-info">
                        <div class="progress">
                        </div>
                        <div class="status">
                            <div class="status-title">
                                {{box.membersCount}} members
                            </div>
                            <div class="status-number">
                                {{box.itemCount}} items
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
