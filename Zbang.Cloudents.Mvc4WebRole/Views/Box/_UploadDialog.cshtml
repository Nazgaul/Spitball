        <div class="popupWrppr upload">
            <header class="popupHeader">
                <span class="uploadHeader lFloat">@DialogResources.UploadFiles</span>
            </header>
            <div class="step3">
                <div class="dragDropBox" id="fileZone">
                    @* <ul>
                    </ul>*@
                    <div class="dragDropTxtE" id="DragDropText">@DialogResources.DragAndDrop</div>
                    <a href="#" id="AddFiles" class="btn1">@DialogResources.ChooseFile</a>
                </div>
            </div>
