                        <button data-title="loading" id="up_DropBox" type="button" disabled="disabled" class="btn dropBox">Dropbox</button>
                    </li>
                    <li class="source">
                        <button type="button" id="up_Drive" disabled="disabled" class="btn drive">Google Drive</button>
                    </li>
                    <li class="source">
                        <button type="button" disabled="disabled" id="up_Sky" class="btn sky">Sky Drive</button>
                    </li>
                </ul>
            </div>
            <button class="closeDialog" data-closeDiag="close"></button>
