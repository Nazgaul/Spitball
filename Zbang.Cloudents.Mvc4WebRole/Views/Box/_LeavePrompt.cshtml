
@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources
@using Zbang.Cloudents.Mvc4WebRole.Views.Library.Resources

<div class="modal-header">
    <h3 class="modal-title"><span>@SharedResources.Unfollow @SharedResources.Or @SharedResources.Delete</span></h3>
</div>
<div class="modal-body">
    <section class="changeName clearfix">
        <header>{Box name here}</header>
        <button type="button" ng-click="leave()" class="rFloat btn1">@SharedResources.Unfollow</button>
        @*<form ng-submit="renameDepartment()">
            <input class="inputText" type="text" select-on-click ng-model="formdata.newName" autofocus required />
            <div class="lFloat">@MainViewResources.CanConfuse</div>
            <input type="submit" class="btn1 next rFloat" ng-disabled="disable()" value="@SharedResources.Save">
        </form>*@
    </section>
    <section class="deleteDept clearfix">
        <header>@SharedResources.Delete {Box name here}</header>
        <input type="checkbox" class="checkbox" id="delDeptCb" ng-checked="disableDelete" ng-model="disableDelete" />
        <label class="cbLabel2" for="delDeptCb">
            <span>Mark to delete this box</span>
            @Html.Svg("~/Images/Defs.svg", "checkmark")
        </label>
        <button type="button" ng-click="delete()" class="btn1 rFloat delDeptBtn">@SharedResources.Delete</button>
        <div class="alert">Deleting will remove all content and members</div>
        @*<button type="button" ng-if="canDelete" ng-click="deleteDepartment()" ng-disabled="!disableDelete"
                class="btn1 rFloat delDeptBtn">
            @SharedResources.Delete
        </button>*@
    </section>
    <button type="button" class="closeModal" ng-click="cancel()">
        @Html.Svg("~/Images/Defs.svg", "close", new { @class = "svg-close" })
    </button>
</div>