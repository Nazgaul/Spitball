<ng-pluralize class="title" count="cc.step" when="{
               '1' : 'Let us help you find the classes you are taking',
               '2' : 'Select your first class',
               '3' : 'Good job!',
               '4' : 'One done. One more to go!',
               '5' : '' }">
    </ng-pluralize>
<form name="classChooseFrom" novalidate ng-submit="cc.classSearch()" layout="row" layout-wrap>
    <input spellcheck="false" autofocus type="search" placeholder="Search by class name or department"
           ng-model="cc.term" ng-model-options="{debounce : 350}" ng-change="cc.classSearch()" ng-minlength="2" required/>
    <button type="submit" class="search-button" ng-disabled="classChooseFrom.$invalid">
        <md-icon md-svg-icon="t:searchIcon"></md-icon>
    </button>
</form>
<div ng-switch="cc.step">
    <div ng-switch-when="1">
        <!--Artboard 1 copy / copy 7 / copy 8 -->
        <h1>Let us help you find the classes you are taking</h1><!-- header changes according to step (copy / copy 7 / copy 8) -->
        <h1></h1>
        <h1></h1>

        <div class="content">
            <div>
                <img src="@Url.CdnContent("/Images/Site/search_uni.png?v=3")" />
                <div class="text"></div>
            </div>
            <div class="empty-state">
                <div class="text">Advance to the next level...</div>
                <button type="button" class="create-class"></button>
            </div>
        </div>
    </div>

    <div ng-switch-multiple-when="[2,4]" @*ng-switch-when-separator="|"*@>
        <!--Artboard 1 copy 6-->
        <h1></h1>
        <div class="result" ng-repeat="c in cc.searchResult track by c.id" ng-click="cc.chose(c)">
            <h2 class="course-name" ng-bind="::c.name"></h2>
            <div class="instructor" ng-bind="::c.professor"></div>
            <div class="number" ng-bind="::c.courseCode"></div>
        </div>
    </div>

    <div ng-switch-when="3">
        <!--Artboard 1 copy 5-->
        <h1></h1>
        <h2></h2>
        <div>
            <div class="counter header">
                <div class="text"></div>
                <div class="progress"></div>
            </div>
            <div class="boxes">
                <div class="selected" ng-repeat="c in ::cc.selectedCourses track by c.id">
                    <div class="name" ng-bind="::c.name"></div>
                </div>
                <div class="empty" ng-repeat="i in cc.getRemainingElement() track by $index">
                    <div class="name">{{$index + cc.selectedCourses.length}}</div>
                </div>
            </div>
        </div>
        <button class="select-more" type="button" ng-click="cc.step = cc.step + 1">Select another class</button>
        <button class="done" type="submit" ng-if="cc.step === 5"></button>
    </div>


    <div ng-switch-when="4">
        <!--Artboard 1 copy 4-->
        <h1></h1>
        <div class="department"></div>
        <form @*name="classChooseFrom"*@ novalidate @*ng-submit="cc.classSearch"*@ layout="row" layout-wrap>

            <div>
                <div class="title"></div>
                <input type="text" />
            </div>
            <div>
                <div class="title"></div>
                <input type="text" />
            </div>
            <div>
                <div class="title"></div>
                <input type="text" />
            </div>
            <button type="button"></button>
            <button type="submit"></button>
        </form>
    </div>

    <div ng-switch-when="5">
        <!--Artboard 1 copy 3-->
        <h1></h1>
        <div class="department"></div>
        <button type="button"></button>
    </div>
</div>