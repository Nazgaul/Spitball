<ng-pluralize class="title" count="cc.step" when="{
               '1' : 'Let us help you find the classes you are taking',
               '2' : 'Select your first class',
               '3' : 'Good job!',
               '4' : 'One done. One more to go!',
               '5' : 'Well done!',
               '6' : 'Continue searching for your classes',
               '7' : 'Select the department for this new class'}">
</ng-pluralize>
<form ng-show="[1,2,4].indexOf(cc.step) !== -1" class="search-form" name="classChooseFrom" novalidate ng-submit="cc.classSearch()" layout="row" layout-wrap>
    <input spellcheck="false" autofocus type="search" placeholder="Search by class name or department"
           ng-model="cc.term" ng-model-options="{debounce : 350}" ng-change="cc.classSearch()" ng-minlength="2" required />
    <button type="submit" class="search-button" ng-disabled="classChooseFrom.$invalid">
        <md-icon md-svg-icon="t:searchIcon"></md-icon>
    </button>
</form>
<div ng-switch="cc.step">
    <div ng-switch-when="1" class="content default">
        <!--Artboard 1 copy / copy 7 / copy 8 -->

        <div class="search-image">
            <img src="@Url.CdnContent("/Images/Site/search_uni.png?v=3")" alt="lama searching" />
            <div class="text">Advance to the next level...</div>
        </div>

    </div>

    <div ng-switch-multiple-when="[2,4,6]" layout="row" layout-padding layout-wrap class="content search-results">
        <!--Artboard 1 copy 6-->
        <div class="wrapper" ng-repeat="c in cc.searchResult track by c.id" flex="50" flex-xs="100">
            <div class="result box-style" ng-click="cc.choose(c)">
                <h2 class="course-name ellipsis" d-color="{{::c.name.length}}" ng-bind="::c.name"></h2>
                <div class="number ellipsis" ng-bind="::c.courseCode"></div>
                <div class="instructor ellipsis" ng-bind="::c.professor"></div>
            </div>
        </div>
        <div class="empty-state" ng-if="cc.noresult">
            <div class="text">We could not find any Class or Department.<br />Try to search again or add this class to our listings.</div>
            <button type="button" class="create-class action-btn" ng-click="cc.selectDepartment()">Create a new class</button>
        </div>
    </div>

    <div ng-switch-multiple-when="[3,5]" class="content selected-boxes">
        <!--Artboard 1 copy 5-->
        <h2 class="subtitle" ng-if="cc.selectedCourses.length<2">You need at least 2 classes to continue</h2>
        <div class="counter header">
            <div class="text">Your selected classes</div>
            <div class="progress">{{::cc.selectedCourses.length}}/2</div>
        </div>
        <div class="boxes" layout="row" layout-padding layout-wrap>
            <div class="wrapper" flex="50" flex-xs="100" ng-repeat="c in ::cc.selectedCourses track by c.id">
                <div class="selected box-style">
                    <h2 class="course-name ellipsis" d-color="{{::c.name.length}}" ng-bind="::c.name"></h2>
                    <div class="number" ng-bind="::c.courseCode"></div>
                    <div class="instructor" ng-bind="::c.professor"></div>
                </div>
            </div>

            <div class="wrapper" flex="50" flex-xs="100" ng-repeat="i in ::cc.getRemainingElement() track by $index">
                <div class="empty box-style" ng-click="cc.chooseMore()">
                    <h2 class="ellipsis">Class&nbsp;<span ng-bind="::$index + cc.selectedCourses.length + 1"></span></h2>
                </div>
            </div>
        </div>
        <div class="buttons">
            <button class="select-more action-btn" type="button" ng-click="cc.chooseMore()">Select another class</button>
            <button class="done action-btn space-before" type="submit" ng-if="cc.step === 5">Done</button>
        </div>
    </div>
    <div ng-switch-when="8" class="content add-class">
        <!--Artboard 1 copy 4-->
        <h1 class="title">Add a new class to</h1>
        <h2 class="department box-style ellipsis" d-color="::cc.selectedDepartment.name.length" flex="50" flex-xs="100" ng-bind="::cc.selectedDepartment.name"></h2>
        <form name="createBox" flex="50" flex-xs="100" novalidate @*ng-submit="cc.classSearch"*@>
            <md-input-container class="form-field">
                <label for="className" >Class name:</label>
                <input id="className" required md-no-asterisk autocomplete="off" type="text" name="className" placeholder="Enter class name" maxlength="35" />
            </md-input-container>

            <md-input-container class="form-field">
                <label for="classNumber">Class number (optional):</label>
                <input id="classNumber" required md-no-asterisk autocomplete="off" type="text" name="classNumber" placeholder="Enter class number" maxlength="35" />
            </md-input-container>
            <md-input-container class="form-field">
                <label for="proffesor">Proffesor name (optional):</label>
                <input id="proffesor" required md-no-asterisk autocomplete="off" type="text" name="proffesor" maxlength="35" placeholder="Enter proffesor name"/>
            </md-input-container>
            <div ng-messages="createBox.$error">
                <div ng-message="server">{{l.error}}</div>
            </div>
            <div class="buttons">
                <button class="cancel-btn" type="button">Cancel</button>
                <button class="action-btn space-before" type="submit">Add</button>
            </div>
        </form>
    </div>

    <div ng-switch-when="7" class="content select-department">
        <!--Artboard 1 copy 3-->
        <div class="departments" layout="row" layout-padding layout-wrap>
            <div class="department wrapper" flex="50" flex-xs="100" ng-repeat="c in ::cc.departmentlist track by c.id">
                <h2 class="box-style ellipsis" d-color="{{::c.name.length}}" ng-bind="::c.name" ng-click="cc.selectDepartment(c)"></h2>
            </div>
            <div class="add-department wrapper" flex="50" flex-xs="100">
                <button type="button" class="box-style">
                    <md-icon md-svg-icon="t:add"></md-icon>
                    <h2 class="ellipsis">Add department</h2>
                </button>
            </div>
        </div>
        <div class="buttons">
            <button class="cancel-btn" type="button">Cancel</button>
        </div>
    </div>
</div>
