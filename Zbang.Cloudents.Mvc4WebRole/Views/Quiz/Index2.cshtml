@{
    const string svgUrl = "~/images/site/quizIcons.svg";
}

<div class="full-screen quizPage">
    <header>
        <div class="text-center" id="quiz-top">{{::q.name}}</div>
        <button type="button" ng-click="app.back(q.boxUrl)" class="close">@Html.Svg("~/images/site/icons.svg", "close")</button>
    </header>
    <div>
        <div class="hidden-sm hidden-xs arrows prev" >
            <button type="button" ng-click="q.back()" ng-show="q.index > 0 && q.index < q.questions.length">
                @Html.Svg(svgUrl, "arrow")
            </button> 
        </div>
        <div class="wrapper">
            <div class="stop-watch-wrapper">
                <stopwatch control="q.timerControl"></stopwatch>
                <button type="button" class="stopwatch-btn" ng-click="q.start()">
                    <div ng-if="q.timerControl.isRunning">
                        @Html.Svg(svgUrl, "pause", new { @class = "pause" })
                    </div>
                    <div ng-if="!q.timerControl.isRunning">
                        @Html.Svg(svgUrl, "play", new { @class = "play" })
                    </div>
                </button>
                <div class="progress-wrapper">
                    <span>{{q.index}}/{{q.questions.length}}</span>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="{{q.index/q.questions.length*100}}" aria-valuemin="0" aria-valuemax="100" ng-style="{width: q.index/q.questions.length*100 + '%'}">
                            <span class="sr-only">{{q.index/q.questions.length*100}}% Complete</span>
                        </div>
                    </div>
                </div>
            </div>
            <div ng-if="q.index < q.questions.length" ng-include="'quiz-question-template.html'" ng-repeat="question in ::q.questions"></div>
            <div ng-if="q.index === q.questions.length">
                <h2>Good job</h2>
                <div>you have completed the quiz</div>
                <div>you have answered {{q.answersCount}}/{{::q.questions.length}}</div>
                <button type="button" ng-click="q.back()">Go back and check</button>
                <button type="button" ng-click="q.checkAnswers()">Submit</button>
            </div>
        </div>
        <div class="hidden-sm hidden-xs arrows next">
            <button type="button" ng-show="q.index < q.questions.length" ng-click="q.next()">@Html.Svg(svgUrl, "arrow")</button> 
        </div>
    </div>
