<div class="full-screen quiz-create">
    <header>
        <div class="text-center">create a quiz</div>
        <a class="close" href="{{::q.boxUrl}}">X</a>
    </header>
    <div class="not-supported">this is not supported section</div>
    <form class="supported" ng-submit="q.publish()" novalidate name="createQuiz">
       
        <span>Course: Name</span>
        <input type="text" class="form-control choose-quiz-name" placeholder="choose quiz name" autofocus required ng-model="q.name" />
        <ol class="list-unstyled">
            <li class="question" ng-repeat="question in q.questions">
                <div placeholder="question #{{$index + 1}}" ng-blur="q.saveQuestion(question)" text-angular ta-text-editor-class="question-content" ng-model="question.htmlText"></div>
                <span>Answers</span>
                <ol>
                    <li ng-repeat="answer in question.answers">
                        <input type="text" placeholder="Answer {{$index + 1}}" />
                        <input type="radio" name="question {{$parent.$index}}" />
                    </li>
                </ol>
            </li>
        </ol>
        <button type="button" ng-click="q.addQuestion()">+ add question</button>
        <button type="submit" class="btn btn-primary">publish</button>
        <button type="button" class="pull-right">preview quiz</button>
    </form>
</div>