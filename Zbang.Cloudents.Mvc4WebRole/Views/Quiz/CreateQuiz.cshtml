<div class="full-screen quiz-create">
    <header>
        <div class="text-center">create a quiz</div>
        <a class="close" href="{{::q.boxUrl}}">X</a>
    </header>
    <div class="not-supported">this is not supported section</div>
    <form class="supported" ng-submit="q.publish()" novalidate name="createQuiz">

        <span>Course: Name</span>
        <input class="form-control choose-quiz-name" type="text" placeholder="choose quiz name" autofocus required ng-model="q.name" ng-model-options="{ updateOn: 'default blur', debounce: { default: 500, blur: 0 } }" ng-change="q.saveName()" ng-blur="q.saveNameOnBlur()" />
        <ol class="list-unstyled">
            <li class="question" ng-repeat="question in q.questions">
                <div placeholder="question #{{$index + 1}}" ng-blur="q.saveQuestion(question)" text-angular ta-text-editor-class="question-content" ng-model="question.text"></div>
                <span>Answers</span>
                <ol>
                    <li ng-repeat="answer in question.answers">
                        <input type="text" ng-model="answer.text" ng-blur="q.saveAnswer(question,answer)" placeholder="Answer {{$index + 1}}" />
                        <input type="button" ng-click="q.deleteAnswer(question,answer)" value="X" />
                        <input type="radio" name="question {{$parent.$index}}" ng-disabled="!answer.text.length" ng-click="q.markcorrect(question,answer)" ng-checked="answer.id === question.correctAnswer" />
                    </li>
                    <li ng-click="q.addAnswer(question)">
                        <input disabled type="text" placeholder="add an answer" />
                        <input disabled type="radio" />
                    </li>
                </ol>
            </li>
        </ol>
        <button type="button" ng-click="q.addQuestion()">+ add question</button>
        <button type="submit" class="btn btn-primary">publish</button>
        <button type="button" class="pull-right">preview quiz</button>
    </form>
</div>