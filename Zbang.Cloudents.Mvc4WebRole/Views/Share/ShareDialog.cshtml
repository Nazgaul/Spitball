@using Zbang.Cloudents.Mvc4WebRole.Views.Box.Resources
@using Zbang.Cloudents.Mvc4WebRole.Views.Flashcard.Resources
<md-dialog class="share-dialog">
    <md-toolbar>
        <h1 ng-if="sd.what==='f'">@FlashcardResources.ShareTitle</h1>
        <h1 ng-if="sd.what==='b'">@BoxResources.ShareTitle</h1>
        <md-button class="close" ng-click="sd.close()">
            <md-icon md-svg-icon="t:close"></md-icon>
        </md-button>
    </md-toolbar>
    <md-dialog-content>
        <span>@FlashcardResources.ShareSubtitle</span>
        <div class="share-options">
            <button class="twitter share-button" type="button" ng-click="sd.twitter()">
                <div>
                    <md-icon md-svg-icon="s:twitter"></md-icon>
                    <div>Twitter</div>
                </div>
            </button>
            <button class="fb share-button" type="button" ng-click="sd.facebook()">
                <div>
                    <md-icon md-svg-icon="b:facebook-colored"></md-icon>
                    <div>Facebook</div>
                </div>
            </button>
            <a ng-href="{{::sd.whatappLink}}" target="_top" class="whatsapp share-button" ng-click="sd.whatapp()">
                <div>
                    <md-icon md-svg-icon="b:whatsapp"></md-icon>
                    <div>Whatsapp</div>
                </div>
            </a>
        </div>
        <hr />
        <div>@FlashcardResources.ShareCopyUrl</div>
        <input id="shareUrl"  type="text" ng-model="sd.url" readonly/>
        <button class="action-btn" type="button" ngclipboard ngclipboard-success="sd.onSuccess()" data-clipboard-target="#shareUrl">
            @FlashcardResources.ShareCopyLink
            <md-tooltip md-direction="top" md-visible="">
                <div>@FlashcardResources.ShareCopiedLink</div>
            </md-tooltip>
        </button>
    </md-dialog-content>
</md-dialog>
