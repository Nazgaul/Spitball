<div class="page-head">
    <div class="page-title">
        <h1>{{::l.universityName}}</h1>
        <h2 ng-if="l.nodeDetail"><a href="{{::l.nodeDetail.parentUrl}}">back {{::l.nodeDetail.name}}</a></h2>
    </div>

</div>
<div layout="row" layout-padding layout-wrap class="library margin-top-10">
    <div flex-gt-lg="25" flex-lg="33" flex-md="50" flex-sm="50" class="flex" ng-repeat="dep in l.departments">
        <a href="{{::dep.url}}" class="dashboard-stat2 department" d-color="{{::dep.name.length}}">
            <div class="corner" d-color="{{::dep.name.length}}">
            </div>
            <div class="display">
                <div class="number">
                    <h3>{{::dep.name}}</h3>
                </div>
            </div>
            <div class="progress-info">
                <div class="progress background" d-color="{{::dep.name.length}}">
                </div>
                <div class="status">
                    <div class="status-title">
                        {{::dep.noBoxes}} Courses
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div flex-gt-lg="25" flex-lg="33" flex-md="50" flex-sm="50" class="flex" ng-repeat="e in l.boxes" ng-include="'box-template.html'"></div>
    
    <div flex-gt-lg ="25" flex-lg="33" flex-md="50" flex-sm="50" class="flex">
        <button type="button" ng-click="d.createBoxOn = true" class="create-btn">
            <div class="plus">@Html.Svg("~/images/site/icons.svg", "add")</div>
            <div class="title">add study group</div>
        </button>
    </div>
    <div flex-gt-lg="25" flex-lg="33" flex-md="50" flex-sm="50" class="flex">
        <button type="button" ng-click="d.createBoxOn = true" class="create-btn">
            <div class="plus">@Html.Svg("~/images/site/icons.svg", "add")</div>
            <div class="title">add study group</div>
        </button>
    </div>
</div>