@model Zbang.Cloudents.Mvc4WebRole.Models.CreateAcademicBox
@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources

<div class="modal-header">
    <h3 class="modal-title"><span>@DialogResources.CreateCourse</span></h3>
</div>
<div class="modal-body">
    <form name="createAcademicBox" novalidate ng-submit="create(createAcademicBox.$valid)">
        @*Html.AntiForgeryToken()*@            
        <div class="section">
            <div class="courseName" ng-class="{error : submitted && createAcademicBox.CourseName.$error.required}">
                @Html.LabelFor(m => m.CourseName)
                <span class="error">CourseName required</span>
                @Html.TextBoxFor(m => m.CourseName, new { @class = "inputText", ng_model = "formData.courseName", required = "required" })
            </div>
            <div>
                @Html.LabelFor(m => m.CourseId)
                @Html.TextBoxFor(m => m.CourseId, new { @class = "inputText", ng_model = "formData.courseId" })
            </div>
        </div>
        <div class="section">
            <div class="professor">
                @Html.LabelFor(m => m.Professor)
                @Html.TextBoxFor(m => m.Professor, new { @class = "inputText", ng_model = "formData.professor" })
            </div>
        </div>
        <input type="submit" class="btn1 next" value="@DialogResources.Create" ng-click="submitted=true" />
    </form>
    <button type="button" class="closeDialog" ng-click="cancel()"></button>
</div>