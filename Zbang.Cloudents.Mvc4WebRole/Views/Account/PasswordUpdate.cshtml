@model Zbang.Cloudents.Mvc4WebRole.Models.Account.NewPassword
@{
    Layout = "~/Views/Shared/_LayoutStatic.cshtml";
}

@using Zbang.Cloudents.Mvc4WebRole.Views.Account.Resources

<div class="newPwd">
    <div class="staticTitle">@ForgotPasswordResources.ChoosePwd</div>
    <div class="staticWpr">
        <div class="innerContent">
            @using (Html.BeginForm("PasswordUpdate", "Account", new {key=Request.QueryString["key"] }))
            {
               
                Html.RenderAction("AntiForgeryToken", "Home", true);
                @Html.ValidationSummary(true)

                @Html.LabelFor(m => m.Password)
                @Html.ValidationMessageFor(m=>m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "inputText", autofocus = "autofocus", autocomplete="off" });
                
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m=>m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "inputText" , autocomplete="off"});
              
                <button type="submit" class="btn1">@ForgotPasswordResources.Submit</button>
            
            }
        </div>
    </div>
</div>
<script>
    document.querySelector('form').addEventListener('submit', function() {
        this.querySelector('button[type=submit]').setAttribute('disabled', 'disabled');
    });
</script>
