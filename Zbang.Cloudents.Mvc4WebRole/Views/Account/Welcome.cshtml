@{
    ViewBag.Title = "Connect to Cloudents";
    Layout = "~/Views/Shared/_LayoutStatic.cshtml";
}
@using Zbang.Cloudents.Mvc4WebRole.Views.Account.Resources
@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources
@model Zbang.Cloudents.Mvc4WebRole.Models.Account.LogOnRegister

<div id="connect" class="enter enterConnect">
    <div class="enterTitle">@LogOnResources.ConnectCloudents</div>
    <div class="staticWpr">
        <div id="fb_log" class="facebook"><span class="fbImg"></span>@LogOnResources.Facebook</div>            
        <div class="enterForm">
            @{Html.RenderPartial("LogOn", Model.LogOn);}
        </div>
        <div class="create">@LogOnResources.NoAccount&nbsp;<a href="@Url.ActionHash("Welcome", "register")">@LogOnResources.SignUp</a></div>
    </div>
</div>

<div id="register" class="enter enterRegister">
    <div class="enterTitle">@LogOnResources.CreateCloudents</div>
    <div class="staticWpr">
        <div class="facebook"><span class="fbImg"></span>@LogOnResources.FacebookSignUp</div>
        <div class="enterForm" id="joinForm">
            @{Html.RenderPartial("Register", Model.Register);}
        </div>
        <div class="connect">@LogOnResources.AlreadyHave&nbsp;<a href="@Url.ActionHash("Welcome", "connect")">@SharedResources.SignIn</a></div>
    </div>
</div>
