@using Zbang.Cloudents.Mvc4WebRole.Views.Account.Resources

<div class="accountPage-wrapper" id="accountPage">
    <div class="page-head">
        <div class="page-title">
            <h1>@AccountResource.Settings</h1>
        </div>
    </div>
    <div class="profile-content">
        <div class="header md-tab-header">
            <md-tabs @*class="align-right"*@>

                <md-tab ui-sref="settings.profile" md-active="b.isActiveState('settings.profile')" ga-track-event="['settings', 'moved to profile']">
                    <md-tab-label>@AccountResource.ProfileAccount</md-tab-label>
                </md-tab>
                <md-tab ui-sref="settings.password" md-active="b.isActiveState('settings.password')" ga-track-event="['settings', 'moved to password']">
                    <md-tab-label>@AccountResource.ChangePassword</md-tab-label>
                </md-tab>
                <md-tab ui-sref="settings.notification" md-active="b.isActiveState('settings.notification')" ga-track-event="['settings', 'moved to notifications']">
                    <md-tab-label>@AccountResource.Notifications</md-tab-label>
                </md-tab>
            </md-tabs>
        </div>

        <div class="portlet-body">
            <div class="tab-content">
                <div class="page-animation" ui-view></div>
            </div>
        </div>
    </div>
</div>


