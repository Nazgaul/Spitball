@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using Zbang.Cloudents.Mvc4WebRole.Views.Account.Resources
@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources


<body class="page-md">
    <noscript>
        <iframe src="//www.googletagmanager.com/ns.html?id=GTM-NDZLW7"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <script>
        (function (w, d, s, l, i) {
            w[l] = w[l] || []; w[l].push({
                'gtm.start':
                new Date().getTime(), event: 'gtm.js'
            }); var f = d.getElementsByTagName(s)[0],
            j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
            '//www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
        })(window, document, 'script', 'dataLayer', 'GTM-NDZLW7');</script>
    <div class="login">
        <div>
            <div class="logo">
                <a href="@Url.Action("Index","Account")">
                    <img src="~/Images/signin/signup_logo.png" alt="" />
                </a>
            </div>

            <div class="content" style="display:none;">
                <form class="login-form" action="" method="post">
                    @{ Html.RenderAction("AntiForgeryToken", "Home", true);}
                    <h3 class="form-title">@LogOnResources.LoginToAccount</h3>
                    @*<div class="g-signin2" data-onsuccess="onSignIn"></div>*@

                    <div id="login_alert_text" class="alert alert-danger display-hide">
                        <button class="close" data-close="alert"></button>
                        <span></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="@LogOnResources.Email" name="email" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" placeholder="@LogOnResources.Password" name="password" />
                    </div>
                    <div class="form-actions">
                        @*<label class="checkbox">
                                <input type="checkbox" name="rememberMe" value="true" /> @LogOnResources.RememberMe
                            </label>*@

                        @*<div class="checkbox-design"></div>
                            <label class="remember-me" for="remember-me"></label>
                            <input type="checkbox" name="rememberMe" value="true" id="remember-me">
                            <span>Remember me</span>*@

                        <div class="checkbox-design">
                            <input type="checkbox" name="rememberMe" value="true" id="remember-me">
                            <label class="remember-me" for="remember-me"></label>
                            <span>@LogOnResources.RememberMe</span>
                        </div>

                        <button type="submit" class="btn blue pull-right">
                            @LogOnResources.LogIn
                        </button>
                    </div>
                    <div class="forget-password">
                        <h4>@LogOnResources.ForgotYourPassword</h4>
                        <p>
                            @LogOnResources.NoWorries <span id="forget-password">
                                @LogOnResources.Here
                            </span>
                            @LogOnResources.ToResetPassword.
                        </p>
                    </div>
                    <div class="login-options">
                        <h4>@LogOnResources.OrLoginWith</h4>
                        <button type="button" class="google">@Html.Svg("/images/signin/loginOptions.svg", "google")</button>
                        <button type="button" class="facebook">@Html.Svg("/images/signin/loginOptions.svg", "facebook")</button>
                    </div>
                    <div class="create-account">
                        <p>
                            @LogOnResources.DontHaveAnAccount&nbsp; <a href="javascript:;" id="register-btn">
                                @LogOnResources.CreateAccount
                            </a>
                        </p>
                    </div>
                </form>


                <form class="forgot-password-form" action="" method="post" style="display:none;">
                    <h3 class="form-title">
                        @LogOnResources.ForgotYourPassword
                    </h3>
                    <div id="resetPassword_alert_text" class="alert alert-danger display-hide">
                        <button class="close" data-close="alert"></button>
                        <span></span>
                    </div>
                    <div class="text">
                        <p>@AccountResource.EmailToReset</p>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="email" placeholder="@LogOnResources.Email" name="email" />
                    </div>
                    <div class="form-actions">
                        <button class="cancel btn grey pull-right">Cancel</button>
                        <button type="submit" class="btn blue pull-right">@LogOnResources.Submit</button>
                    </div>
                    <div class="create-account"></div>
                </form>

                <div class="check-email-message" style="display:none;">
                    <h3 class=" form-title">
                        @LogOnResources.CheckEmailTitle
                    </h3>
                    <div class="text">
                        <p>We've emailed you password<br />reset instructions.</p>
                        @Html.Svg("/images/Site/info.svg", "info")
                        <p>
                            <span class="bold">Didn't receive the email?</span><br />
                            Check your mail spam folder or<br />

                            <button onclick="location.href = 'resetpassword';">send another request</button>
                        </p>
                    </div>
                    <div class="create-account"></div>
                </div>

                <form class="register-form" action="" method="post">
                    @{ Html.RenderAction("AntiForgeryToken", "Home", true);}
                    <h3>@LogOnResources.CreateAccount</h3>
                    <div id="register_alert_text" class="alert alert-danger display-hide">
                        <button class="close" data-close="alert"></button>
                        <span></span>
                    </div>
                    <div class="form-group first">
                        <input class="form-control" type="text" placeholder="@SharedResources.FirstName" name="firstName" />
                    </div>
                    <div class="form-group second">
                        <input class="form-control" type="text" placeholder="@SharedResources.LastName" name="lastName" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="@SharedResources.Email" name="NewEmail" id="register_email" />
                    </div>


                    <div class="form-group">
                        <input class="form-control" type="password" autocomplete="off" placeholder="@LogOnResources.Password" name="Password" />
                    </div>

                    <div class="form-actions-container">
                        <div class="form-group">
                            <label>
                                @RegisterResources.IAgree
                                <a class="tos" target="_blank" href="@Url.Action("TermsOfService", "Home")">&nbsp;@RegisterResources.TermsOfServices</a>&nbsp;@RegisterResources.And&nbsp;<a target="_blank" href="@Url.Action("Privacy", "Home")">@RegisterResources.PrivacyPolicy</a>&nbsp;@RegisterResources.ofZbang
                            </label>
                        </div>

                        <div class="form-actions pull-right">
                            @*<button id="register-back-btn" type="button" class="btn">
                                    <i class="m-icon-swapleft"></i> Back
                                </button>*@
                            <button type="submit" id="register-submit-btn" class="btn blue">
                                @LogOnResources.SignUp
                            </button>
                        </div>
                    </div>

                    <div class="login-options">
                        <h4>@LogOnResources.OrSignupWith</h4>
                        <button type="button" class="google">@Html.Svg("/images/signin/loginOptions.svg", "google")</button>
                        <button type="button" class="facebook">@Html.Svg("/images/signin/loginOptions.svg", "facebook")</button>
                    </div>
                    <div class="login-account">
                        <p>
                            @LogOnResources.AlreadyHave&nbsp;<a href="javascript:;" id="login-btn">@SharedResources.SignIn</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <div id="cssCheck"></div>
    @Html.Script2("signin")
    @Html.JqueryValidateLocale()
    <script type="text/javascript" src="~/js/CDNFallbackWithoutAngular.js?v=@VersionHelper.CurrentVersion(true)"></script>
    <script src="https://apis.google.com/js/platform.js" onload="googleLoad()" async defer></script>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-9850006-3', 'auto');
        ga('send', 'pageview');


        jQuery(document).ready(function () {
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
            Login.init();
            Demo.init();
        });
    </script>
</body>
