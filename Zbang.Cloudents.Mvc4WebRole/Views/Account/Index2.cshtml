@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@using Zbang.Cloudents.Mvc4WebRole.Views.Account.Resources
@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources
@using Zbang.Zbox.Infrastructure.Culture

<div class="topImg">
    <div class="headerWpr">
        <div class="logo lFloat"></div>
        <div class="headerActions rFloat">
            <button type="button" id="homeLogin" class="btn addConnect">@SharedResources.SignIn</button>
            <button type="button" class="headerSettings"></button>
        </div>
    </div>
    <div class="headingTexts">
        <h1>@HomeResources.SocialStudy</h1>
        <h3>@HomeResources.StudyPlatform</h3>
        <div class="facebook"><span class="fbImg"></span>@SharedResources.FacebookSignUp</div>
        <button type="button" id="homeRegister" class="email addRegister"><span class="emailImg"></span>@SharedResources.EmailSignUp</button>
    </div>

    <div id="VideoWpr" data-playtext="@HomeResources.PlayVideo" class="videoWpr"></div>
    <div class="vidoeWrapper" id="mVideo">
        <video preload="none" id="homeVideo" class="video" controls>
            <source src="https://zboxstorage.blob.core.windows.net/videos/homeScreenVideo.mp4" type="video/mp4">
            <source src="https://zboxstorage.blob.core.windows.net/videos/CloudentsHomeScreen.webm" type="video/webm" />
            Your browser does not support video element
        </video>
    </div>
    <div class="language">
        <a href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.EnglishUsName).Culture })" title="English (US)">@Languages.EnglishUsName</a>
        <a href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.EnglishGbName).Culture })" title="English (UK)">@Languages.EnglishGbName</a>
        <a href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.RussianName).Culture })" title="Russian site">@Languages.RussianName</a>
        <a href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.HebrewName).Culture })" title="Hebrew site">@Languages.HebrewName</a>
        <a href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.ArabicName).Culture })" title="Arabic site">@Languages.ArabicName</a>
        <a class="lastLang" href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.ChineseName).Culture })" title="Chinese site">@Languages.ChineseName</a>
    </div>
    <aside class="sideBar">
        <button class="closeMenu" type="button"></button>
        <ul>
            <li><a href="~/">@HomeResources.Homepage</a></li>
            <li><a href="@Url.Action("AboutUs", "Home")">@HomeResources.AboutCloudents</a></li>
            <li><a href="@Url.Action("Help", "Home")">@SharedResources.Help</a></li>
            <li><a href="@Url.Action("Privacy", "Home")">@FooterResources.PrivacyPolicy</a></li>
            <li><a href="@Url.Action("TermsOfService", "Home")">@FooterResources.TermsOfService</a></li>
            <li class="last"><a href="@Url.Action("ContactUs", "Home")">@FooterResources.ContactUs</a></li>
            <li class="sideBarSignupBtn addRegister">@LogOnResources.SignUp</li>
            <li class="last addConnect">@SharedResources.SignIn</li>            
            <li><a href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.EnglishGbName).Culture })" title="English (UK)">@Languages.EnglishGbName</a></li>
            <li><a href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.RussianName).Culture })" title="Russian site">@Languages.RussianName</a></li>
            <li><a href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.HebrewName).Culture })" title="Hebrew site">@Languages.HebrewName</a></li>
            <li><a href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.ArabicName).Culture })" title="Arabic site">@Languages.ArabicName</a></li>
            <li><a href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.EnglishUsName).Culture })" title="English (US)">@Languages.EnglishUsName</a></li>
            <li class="last"><a href="@Url.Action("ChangeLocale", "Account", new { Lang = Languages.GetLanguageDetailByName(Languages.ChineseName).Culture })" title="Chinese site">@Languages.ChineseName</a></li>
        </ul>
    </aside>
</div>

<section class="available">
    <div class="sectionWpr">
        <h2>@HomeResources.Available</h2>
        <div class="sectionText">@HomeResources.WhenItSuits</div>
    </div>
</section>

