@model Zbang.Zbox.ViewModel.Dto.HomePageDataDto
@using Zbang.Cloudents.Mvc4WebRole.Views.Account.Resources;
@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources;
@using Zbang.Zbox.Infrastructure.Culture;
@{

    Layout = null;
    ViewBag.metaDescription = HomePageResources.A4;
    var socialIconsSvg = "~/images/site/social-icons.svg";
    var shouldPostBack = @ViewBag.postBag == true ? "target=_self" : string.Empty;

    var logoLink = User.Identity.IsAuthenticated ? Url.Action("Index", "dashboard") : Url.RouteUrl("homePage");

}
<!doctype html>
<html>
<head>
    @{Html.RenderPartial("_Head");}
    @Html.Css2("homePage")
    <link href="/Content/jquery.bxslider.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimal-ui">
    <meta name="google-signin-client_id" content="997823384046-ddhrphigu0hsgkk1dglajaifcg2rggbm.apps.googleusercontent.com" />
</head>
<body class="homePage">
    <noscript>
        <iframe src="//www.googletagmanager.com/ns.html?id=GTM-NDZLW7"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
