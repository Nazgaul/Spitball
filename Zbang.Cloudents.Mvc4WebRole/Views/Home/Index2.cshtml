                                <a href="@Url.RouteUrl("Help")">@SharedResources.Help</a>
                                <a href="https://az32006.vo.msecnd.net/zboxhelp/SB.pdf" target="_blank">@SharedResources.Advertise</a>
                            </div>
                        </div>
                        <div class="social-links os-animation" data-os-animation="fadeIn" data-os-animation-delay="0.6s" dir="ltr">
                            <a target="_blank" href="https://www.facebook.com/cloudents.il">@Html.Svg(socialIconsSvg, "facebook")</a>
                            <a target="_blank" href="https://twitter.com/SpitballStudy">@Html.Svg(socialIconsSvg, "twitter")</a>
                            <a target="_blank" href="https://plus.google.com/+Cloudents">@Html.Svg(socialIconsSvg, "google")</a>
                            <a target="_blank" href="https://www.youtube.com/channel/UCamYabfxHUP3A9EFt1p94Lg">@Html.Svg(socialIconsSvg, "youtube")</a>
                            <a target="_blank" href="http://instagram.com/spitballstudy">@Html.Svg(socialIconsSvg, "instagram")</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>

    </div>
    <div class="page-footer">
        <div class="scroll-to-top">
            @Html.Svg("~/images/site/icons.svg", "arrow")
        </div>
    </div>
    <div id="cssCheck"></div>
    <script type="text/javascript" src="~/js/CDNFallbackWithoutAngular.js?v=@VersionHelper.CurrentVersion(true)"></script>
