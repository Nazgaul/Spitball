    <div class="page-content">
        <header>
            <nav>
                <div class="navbar-header">
                    <div class="navbar-toggle collapsed">
                        <label for="menu-toggle">@Html.Svg("~/images/site/icons.svg", "headerMenu", new { @class = "headerMenu" })</label>
                    </div>
                    <a class="logo-wrapper" href="@logoLink" @shouldPostBack ga-track-event="['header', 'logo']">
                        <div class="logo"></div>
                        @Html.Svg("~/images/site/icons.svg", "smallLogo", new { @class = "logo-small"})
                    </a>
                </div>
                    <input type="checkbox" id="menu-toggle" />
                    <ul>
                        <li id="product">
                            <a href="@Url.RouteUrl("Product")">@HomePageResources.A3</a>
                        </li>
                        <li id="features">
                            <a href="#about-section">@HomePageResources.A9</a>
                        </li>
                        <li id="meet">
                            <a href="#check-us-section">@HomePageResources.A10</a>
                        </li>
                        <li id="apps">
                            <a href="#app-section">@HomePageResources.A11</a>
                        </li>
                        <li class="language">
                            <input type="checkbox" id="language-menu" />
