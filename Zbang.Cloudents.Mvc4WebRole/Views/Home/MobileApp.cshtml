}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MobileApp</title>
    @Html.Css2("mobile")
</head>
<body>
    <img class="topPadding" src="~/Images/Mobile/logo.png" alt="logo" />

    <h1>@MobileAppResources.Header</h1>
    @*<img src="~/Images/Mobile/mobile1.png" alt="carousel1"/>*@

    <div class="carousel">
        <div class="gallery autoplay items-3">
            <div id="item-1" class="control-operator"></div>
            <div id="item-2" class="control-operator"></div>
            <div id="item-3" class="control-operator"></div>

            <div class="images">
                <img src="~/images/mobile/mobile1.png" class="item" alt="carousel1" />
                <img src="~/images/mobile/mobile2.png" class="item" alt="carousel2" />
                <img src="~/images/mobile/mobile3.png" class="item" alt="carousel3" />
            </div>

            <div class="blackSection">
                @*<span>@MobileAppResources.TextDesciption</span>*@
                @*<div class="controls">
                        <a href="#item-1" class="control-button"></a>
                        <a href="#item-2" class="control-button"></a>
                        <a href="#item-3" class="control-button"></a>
                    </div>*@
                <a class="downloadLink" href="http://m.onelink.me/cb0eeb35">@MobileAppResources.ButtonText&nbsp;<b>@MobileAppResources.ButtonTextBold</b></a>
            </div>
        </div>
    </div>
    <footer>
        <select id="lang" class="langSelect" onchange="changeLanguage()">
            <option value="@Languages.GetLanguageDetailByName(Languages.EnglishUsName).Culture">@Languages.EnglishUsName</option>
            <option value="@Languages.GetLanguageDetailByName(Languages.EnglishGbName).Culture">@Languages.EnglishGbName</option>
            <option value="@Languages.GetLanguageDetailByName(Languages.RussianName).Culture">@Languages.RussianName</option>
            <option value="@Languages.GetLanguageDetailByName(Languages.HebrewName).Culture">@Languages.HebrewName</option>
            <option value="@Languages.GetLanguageDetailByName(Languages.ArabicName).Culture">@Languages.ArabicName</option>
        </select>
    </footer>

    @*<img src="~/Images/Mobile/app_store.png" alt="IOS store" />
        <img src="~/Images/Mobile/google_play.png" alt="Google play" />*@



    <script src="~/Scripts/browser-deeplink.min.js"></script>
    <script>
        function changeLanguage(e) {
            var x = document.getElementById('lang').value;
            setCookie('l2', x);
            location.reload();
        }

        function setCookie(cname, cvalue) {
            //d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));
            //var expires = "expires=" + d.toUTCString();
            document.cookie = cname + "=" + cvalue + "; path=/; domain=.spitball.co;";
        }

        function getCookie(cname) {
            var name = cname + "=";
            var ca = document.cookie.split(';');
            for (var i = 0; i < ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0) == ' ') c = c.substring(1);
                if (c.indexOf(name) == 0) return c.substring(name.length, c.length);
            }
            return "";
        }

        function getParameterByName(name) {
            name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
            var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
                results = regex.exec(location.search);
            return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
        }
        deeplink.setup({
            fallback: false,
            urlFallback: location.href,
            android: {
                appId: "com.cloudents.zbox2"
            }
        });
        window.onload = function () {
            var link = getParameterByName("returnUrl");
            deeplink.open("cloudents://" + decodeURI(link.substring(1)));

            var val = getCookie('l2');
            document.getElementById('lang').value = val;
        }

    </script>
</body>
</html>
