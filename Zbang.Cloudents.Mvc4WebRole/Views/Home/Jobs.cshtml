@model IEnumerable<Zbang.Cloudents.Mvc4WebRole.Models.Job>
@{
    ViewBag.Title = "Jobs | Spitball | Study better by working together";
    Layout = "~/Views/Shared/_LayoutStatic.cshtml";
}

<div class="jobsImg"></div>
<div class="jobsContentWpr">
    <ul class="jobsList">
        @{
            int index = 1;
            foreach (var job in Model)
            {
                <li class="jobItem">
                    <input type="checkbox" id="@string.Format("faq-{0}",index)">
                    <label class="question" for="@string.Format("faq-{0}",index)">
                        <span class="jobName">@job.Name</span><br />
                        <span class="jobLoc">@job.Location</span>
                    </label>
                    <div class="answer">
                        @Html.Raw(job.Description)
                        <p class="mail">Apply now: <a href="mailto:matan@spitball.co" target="_self">matan@spitball.co</a></p>
                    </div>
                </li>
                index++;
            }
        }
      
    </ul>
</div>
@section scripts {
    @Html.Script2("faq")
    <script type="text/javascript">
        $(document).ready(function() {
            if ($('.question').length < 3) {
                $('.answer').show();
                $('.question').click(function (e) {
                    e.preventDefault();

                });
            } else {
                $('.question').click(function() {
                    $(this).next().slideToggle({ duration: 400 });
                });
            }
        });
    </script>
}

