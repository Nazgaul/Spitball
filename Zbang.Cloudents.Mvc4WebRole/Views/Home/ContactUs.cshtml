@using Zbang.Cloudents.Mvc4WebRole.Views.Shared.Resources
@using Zbang.Cloudents.Mvc4WebRole.Views.Home.Resources

@{
    ViewBag.Title = "Contact | Spitball | Study better by working together";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="contactUs-page" flex-gt-sm="90" ng-controller="contactUsController as cu">
    <div class="page-title">
        <h1>@HomeResources.ContactUs</h1>
    </div>
    <div>
        <div class="map-wrapper">
            <div id="map" class="gmaps margin-bottom-40" style="height:400px;">
            </div>
        </div>
        <div class="bottom" layout="row" layout-align="space-between start" layout-wrap>
            <div class="contact-us" flex="100" flex-gt-sm="50">
                <h3>@HomeResources.ContactUs</h3>
                <div class="data">
                    <h4>Address</h4>
                    <address class="address">
                        Cloudetns LTD.<br>
                        Hanasi Harishon, 38<br>
                        Rehovot, Israel<br>
                    </address>
                    <h4>Email</h4>
                    <address class="email">
                        <a href="mailto:support@spitball.co">
                            support@spitball.co
                        </a>
                    </address>
                    <div class="social-links">
                        <div class="wrapper" dir="ltr">
                            <a target="_blank" href="https://www.facebook.com/cloudents.il">@Html.Svg("~/images/site/social-icons.svg", "facebook")</a>
                            <a target="_blank" href="https://twitter.com/SpitballStudy">@Html.Svg("~/images/site/social-icons.svg", "twitter")</a>
                            <a target="_blank" href="https://plus.google.com/+Cloudents">@Html.Svg("~/images/site/social-icons.svg", "google")</a>
                            <a target="_blank" href="https://www.youtube.com/channel/UCamYabfxHUP3A9EFt1p94Lg">@Html.Svg("~/images/site/social-icons.svg", "youtube")</a>
                            <a target="_blank" href="http://instagram.com/spitballstudy">@Html.Svg("~/images/site/social-icons.svg", "instagram")</a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="feedback" id="feedback" flex="100" flex-gt-sm="50">
                <h3 class="form-section">Feedback</h3>

                <form novalidate ng-submit="cu.feedback(feedback)" name="feedback" class="data">
                    <p>
                        Spitball is a free online and mobile social studying platform. a community focused on academic activity
                    </p>

                    <md-content>
                        <md-input-container>
                            <label>Subject</label>
                            <input type="text" required ng-model="cu.subject">
                        </md-input-container>
                        <md-input-container>
                            <label>Name</label>
                            <input type="text" required ng-model="cu.name">
                        </md-input-container>
                        <md-input-container>
                            <label>Email</label>
                            <input type="email" required ng-model="cu.email">
                        </md-input-container>
                        <md-input-container>
                            <textarea placeholder="Feedback" required ng-model="cu.feedbackTxt"></textarea>
                        </md-input-container>

                    </md-content>


                    @*<div class="form-group form-md-line-input form-md-floating-label">
                            <textarea class="form-control" rows="2"></textarea>
                            <label for="form_control">Feedback</label>
                        </div>*@
                    <div class="submit-wrapper">
                        <button type="submit" class="btn button-Blue btn-primary" ng-disabled="!feedback.$valid">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="https://maps.google.com/maps/api/js?sensor=true" type="text/javascript"></script>
    @Html.Script2("contactUs")
}