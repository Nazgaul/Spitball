@model Zbang.Cloudents.Mvc4WebRole.Models.InsertUser
@{
    ViewBag.Title = "InsertUser";
}

<div class="insertUser">
<h1>
    טופס משתמש חדש לקלאודנטס
    <br />
    אגודת הסטודנטים המכללה למינהל
</h1>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.ValidationMessageFor(m => m.FirstName)
    @Html.LabelFor(m=>m.FirstName)
    @Html.TextBoxFor(m=>m.FirstName)
    
    @Html.ValidationMessageFor(m => m.LastName)
    @Html.LabelFor(m=>m.LastName)
    
    @Html.TextBoxFor(m => m.LastName)
    @Html.ValidationMessageFor(m => m.Id)
    @Html.LabelFor(m=>m.Id)
    
    @Html.TextBoxFor(m => m.Id)
    
    <input  type="submit" value="עדכן" class="btn1"  />
    <div class="success">הפרטים שהזנת עודכנו בהצלחה!</div>
}
    
</div>

@section scripts {
    @Html.Script2("General")
    <script>
        $('#mLoading').hide();
        $('.insertUser form').submit(function (e) {
            e.preventDefault();
            var $this = $(this);
            if (!$this.valid()) {
                return;
            }

            $this.addClass('complete');
            setTimeout(function () {
                cd.resetErrors($this);
                $this.removeClass('complete');
            }, 3000);
        });
    </script>
        

}
