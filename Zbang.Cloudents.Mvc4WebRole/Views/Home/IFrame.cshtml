@using Zbang.Cloudents.Mvc4WebRole.Views.Account.Resources
@{
    Layout = null;
    const string svgUrl = "~/images/site/icons.svg";
    const string socialIconsSvg = "~/images/site/social-icons.svg";
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    @{Html.RenderPartial("_Head");}
</head>
<body class="page-md">
    <noscript>
        <iframe src="//www.googletagmanager.com/ns.html?id=GTM-NDZLW7"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <script>
        (function (w, d, s, l, i) {
            w[l] = w[l] || []; w[l].push({
                'gtm.start':
                    new Date().getTime(), event: 'gtm.js'
            }); var f = d.getElementsByTagName(s)[0],
                j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
                '//www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
        })(window, document, 'script', 'dataLayer', 'GTM-NDZLW7');</script>


    <a class="siteLogo" href="@Url.RouteUrl("homePage")" style="padding-top: 0;">
        @Html.Svg(svgUrl, "logo", new { @class = "logo-default" })
    </a>
    <div class="container">
        <div class="row">
            <div class="col-md-12  text-center">
                <div class="bold text-center element-top-80 os-animation element-bottom-40">
                    <p class="bigger text-light" style="white-space:pre-wrap; text-shadow:2px 2px 12px #000;">@HomePageResources.A4</p>

                </div>
                <button type="button" class="facebook os-animation" data-os-animation="fadeIn" data-os-animation-delay="0.3s">@Html.Svg(socialIconsSvg, "facebook") @LogOnResources.ExternalProvider</button>
                <button type="button" class="google os-animation" data-os-animation="fadeIn" data-os-animation-delay="0.3s">@Html.Svg(socialIconsSvg, "google") @LogOnResources.ExternalProvider</button>
                <br />
                <a href="@Url.RouteUrl("signup")" target="_blank" class="btn-primary btn-lg element-bottom-20 element-top-20 text-center bold os-animation btnSignIn"
                   data-os-animation="fadeIn" data-os-animation-delay="0.3s">
                    @HomePageResources.A5
                </a>

                <div class="divider-wrapper">
                    <div class="visible-xs element-height-100"></div>
                    <div class="visible-sm element-height-100"></div>
                    <div class="visible-md element-height-100"></div>
                    <div class="visible-lg element-height-100"></div>
                </div>
            </div>
        </div>
    </div>

    @*DO NOT REMOVE THIS AT ALL TIME*@
    <div id="cssCheck"></div>
    <script type="text/javascript" src="~/js/CDNFallbackWithoutAngular.js?v=@VersionHelper.CurrentVersion(true)"></script>
    @Html.JqueryValidateLocale()
    <script src="https://apis.google.com/js/platform.js" onload="googleLoad()" async defer></script>
    <script>
        Login.initExternalLogin();
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-9850006-3', 'auto');
        ga('send', 'pageview');
    </script>
</body>
</html>

<style type="text/css">
    html, body {
        height: 100%;
    }

    body {
        background-image: url("../../Images/HomePage2/HP_image.jpg");
        background-size: cover;
        text-align: center;
        margin: 0;
        padding: 0;
        font-family: Arial;
        color: #fff;
    }

    .siteLogo {
        display: block;
        padding-top: 40px;
    }

        .siteLogo svg {
            fill: #f5f5f5;
            -webkit-filter: drop-shadow(2px 2px 12px #000);
            filter: drop-shadow(2px 2px 12px #000 );
        }

    .logo {
        fill: #fff;
        width: 206px;
        height: 37px;
    }

    h1 {
        font-weight: normal;
        font-size: 24px;
        color: #fff;
        display: inline-block;
        width: 300px;
        /*white-space: pre-wrap;*/
    }

    .actions {
        position: absolute;
        bottom: 40px;
        margin: auto;
        left: 0;
        right: 0;
        width: 290px;
    }

    .facebook, .email {
        width: 228px;
        margin: auto;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }

    .facebook {
        font-size: 15px;
        margin: 35px auto 10px;
        cursor: pointer;
        padding: 8px 15px 9px 55px;
        position: relative;
        line-height: 25px;
        background: #3b5998;
        color: #fff;
    }

    .fbImg, .emailImg {
        position: absolute;
        top: 0;
        bottom: 0;
        margin: auto;
        display: inline-block;
        left: 16px;
    }

        .fbImg:after, .emailImg:after {
            content: '';
            display: inline-block;
            width: 1px;
            height: 30px;
            background: #fff;
            position: relative;
            left: 12px;
            top: 6px;
            opacity: .5;
        }

    .svg-fb {
        width: 11px;
        height: 22px;
        fill: #fff;
        position: relative;
        top: 2px;
    }

    .google {
        color: #676767;
        background: #fff;
        border: 1px solid #fff;
        padding: 7px 15px 8px 53px;
        cursor: pointer;
        font-size: 15px;
        border-radius: 10px;
        position: relative;
        display: inline-block;
        line-height: 25px;
    }

    .emailImg {
        left: 8px;
    }

        .emailImg:after {
            background: #676767;
            top: 5px;
            left: 6px;
        }

    .svg-email {
        width: 24px;
        height: 20px;
        fill: silver;
    }

    .connect {
        margin-top: 15px;
    }

    .addConnect {
        color: #3293f6;
        background: transparent;
        outline: none;
        border: none;
        font-weight: bold;
    }

    a {
        background-color: transparent;
        outline: none;
        text-decoration: none;
        color: inherit;
        cursor: pointer;
        display: inline-block;
    }

    .facebook,
    .google {
        background: #3a5795;
        border: none;
        padding: 10px;
        margin-right: 5px;
        width: 190px;
        color: #fff;
        outline: 0;
        font-size: 16px;
        border-radius: 10px;
    }

        .facebook svg,
        .google svg {
            float: left;
            margin-left: 5px;
            width: 30px;
            height: 30px;
            vertical-align: middle;
            fill: #fff;
        }

    .google {
        margin-right: 0;
        margin-left: 5px;
        background: #DD4B39;
    }

    .bigger {
        font-size: 4vh;
        line-height: 1.2;
        width: 55%;
        margin: 0 auto;
    }

    .btnSignIn {
        background: rgba(40, 40, 40, 0.7) !important;
        width: 348px;
    }

    .btn.btn-lg, button.btn-lg, input[type="submit"].btn-lg, .button.btn-lg {
        border-radius: 10px;
        font-size: 20px;
        padding: 10px 24px;
    }

    .element-bottom-20 {
        margin-bottom: 20px !important;
    }

    .element-top-20 {
        margin-top: 20px !important;
    }

    .bold {
        font-weight: 600 !important;
    }

    .big {
        font-size: 36px;
        line-height: 48px;
    }

    button:hover {
        background-color: #3293f6;
        color: #ffffff;
    }

    .btn-primary {
        font-size: 20px;
        max-width: 390px;
        border-radius: 10px;
        margin-top: 10px !important;
        width: 60vw;
        min-height: 50px;
        line-height: 30px;
    }

        .btn-primary:hover {
            text-decoration: none;
        }

    .container {
        margin-top: 30vh;
    }

    .logo-default {
        width: 57vw;
        height: 12vw;
        margin-top: 3vh;
        max-width: 300px;
        max-height: 100px;
    }
</style>
