@using Zbang.Cloudents.Mvc4WebRole.Views.User.Resources
@model Zbang.Cloudents.Mvc4WebRole.Models.Gamification
<div class="badges">
    <div class="badges-bar">
        @*<div class="info">
                <md-icon md-svg-icon="p:q-mark" class="" ng-click="g.showInfo()"></md-icon>
            </div>*@
        <md-tabs class="badges-tabs" md-dynamic-height="true">
            <md-tab ui-sref="user.badge({type:'level'})" md-active="g.isActive('level')">
                <md-tab-label><h4>@GamificationResources.Levels</h4></md-tab-label>
            </md-tab>
            <md-tab ui-sref="user.badge({type:'badge'})" md-active="g.isActive('badge')">
                <md-tab-label><h4>@GamificationResources.Badges</h4></md-tab-label>
            </md-tab>
            <md-tab ui-sref="user.badge({type:'community'})" md-active="g.isActive('community')">
                <md-tab-label><h4>@GamificationResources.Community</h4></md-tab-label>
            </md-tab>
        </md-tabs>
    </div>
    <div class="badges-tab-content" ng-switch="$state.params['type']">
        <div ng-switch-when="level" class="tab levels">
            <md-icon md-svg-icon="p:stars" class="bg"></md-icon>
            <ul>
                @foreach (var level in Model.Levels)
                {
                    <li class="level">
                        <div class="title">
                            <div class="image"></div>
                            <div class="name">@level.Name</div>
                        </div>
                        <div class="body">
                            @level.Description
                            @{ string progress = "g.levels.l" + level.Index + ".progress"; }
                            <md-progress-linear class="custom-progress-bar" md-mode="determinate" value="{{@progress}}"></md-progress-linear>
                        </div>
                    </li>
                                }

            </ul>
        </div>
        <div ng-switch-when="badge" class="tab badges">
            <div class="badges-container" ng-if="!g.badgeInfo" layout="row" layout-padding layout-wrap>
                <div class="wrapper" flex-lg="20" flex-md="25" flex-gt-lg="20" flex-xs="50" flex-sm="25" ng-repeat="badge in ::g.badges">
                    <div class="badge-container" ng-click="g.showBadge(badge)">
                        <md-icon md-svg-icon="p:checkmark" ng-if="badge.progress === 100"></md-icon>
                        <div class="image"></div>
                        <div class="text" ng-bind="::badge.name"></div>
                        <div class="progress">
                            <md-progress-linear class="custom-progress-bar" ng-cloak md-mode="determinate" value="{{::badge.progress}}"></md-progress-linear>
                        </div>
                    </div>
                </div>
            </div>
            <div ng-if="g.badgeInfo" class="expanded">
                <div class="prev">
                    <md-icon ng-class="{disabled: !g.badgeInfo.prev}" ng-click="g.showBadge(g.badgeInfo.prev)" md-svg-icon="p:arrow-right"></md-icon>
                </div>
                <div class="badge-container">
                    <md-icon md-svg-icon="p:checkmark" ng-if="g.badgeInfo.data.progress === 100"></md-icon>
                    <div class="image"></div>
                    <div class="text" ng-bind="g.badgeInfo.data.name"></div>
                    <div class="progress">
                        <md-progress-linear class="custom-progress-bar" ng-cloak md-mode="determinate" value="{{g.badgeInfo.data.progress}}"></md-progress-linear>
                    </div>
                    <div class="details">
                        <div class="condition" ng-bind="g.badgeInfo.data.details"></div>
                        <div class="points">+{{g.badgeInfo.data.points}} pts</div>
                    </div>
                </div>
                <div class="next">
                    <md-icon ng-class="{disabled: !g.badgeInfo.next}" ng-click="g.showBadge(g.badgeInfo.next)" md-svg-icon="p:arrow-right"></md-icon>
                </div>
                <md-icon class="close" md-svg-icon="t:close" ng-click="g.badgeInfo=false"></md-icon>
            </div>
        </div>
        <div ng-switch-when="community" class="tab community">
            <div class="top">
                <div class="bg-l"></div>
                <div class="bg-r"></div>
                <img class="title" src="@Url.CdnContent("~/Images/Site/Leaderboard-title.png")" />
            </div>
            <div class="content">
                <div class="filter-wrapper">
                    <button type="button" ng-click="g.goToSelf()" class="action-btn">Show Myself</button>
                </div>
                <div class="users" layout="row" layout-padding layout-wrap>

                    <div class="user-data" ng-repeat="user in ::g.leaderboard track by user.id" ng-class="{'top-user' : $index < 5}">
                        <div class="rank" ng-bind="::$index+1"></div>
                        <a class="img-wrapper" ng-attr-id="{{'user_' + user.id}}" ui-sref="user({userId:user.id,userName:user.name})">
                            <user-image class="img-responsive" name="user.name" image="user.image" width="68" height="68"></user-image>
                        </a>
                        <div class="progress-user">
                            <md-progress-linear class="custom-progress-bar" ng-cloak md-mode="determinate" value="{{gb.score}}"></md-progress-linear>
                            <div class="name ellipsis" ng-bind="::user.name"></div>
                            <div class="badges">@GamificationResources.Badges</div>
                        </div>
                        <div class="points" ng-bind="::user.score"></div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
