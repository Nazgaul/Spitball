<div class="userPage">
    <div class="profile-sidebar">
        <div class="portlet light profile-sidebar-portlet" ng-if="::!u.isUserProfile">
            <div class="profile-userpic">
                <user-image ng-if="u.details" class="img-responsive" name="u.details.name" image="u.details.image" width="125" height="125"></user-image>
            </div>
            <div class="profile-usertitle">
                <h3 class="profile-usertitle-name multi-line-ellipsis limit-two" ng-bind="::u.details.name"></h3>
                <h4 class="profile-usertitle-job" ng-bind="::u.details.universityName"></h4>
                <button class="message" ng-if="::!u.isUserProfile" ng-click="u.sendMessage()" user-not-register-popup="click">
                    <div class="content">
                        <md-icon md-svg-icon="t:chat"></md-icon>
                        <span>@UserResources.MessageButton</span>
                    </div>
                </button>
            </div>
        </div>
        <div class="points-container" @*ng-if="!u.isUserProfile"*@>
            <h5 count-up id="points" end-val="{{::u.details.score}}" duration="3"></h5>
            <h5>@UserResources.Points</h5>
        </div>
        <section class="points-info" hide-xs ng-if="::u.isUserProfile">
            <h1>Earning points</h1>
            <table>
                <tbody>
                    <tr class="titles">
                        <th></th>
                        <td><md-icon class="view" md-svg-icon="b:eye"></md-icon></td>
                        <td><md-icon class="download" md-svg-icon="i:download"></md-icon></td>
                        <td><md-icon class="like" md-svg-icon="b:like"></md-icon></td>
                    </tr>
                    <tr>
