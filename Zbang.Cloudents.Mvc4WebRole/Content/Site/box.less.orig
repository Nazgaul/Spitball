.quiz {
    border: 1px solid #42494F;
    padding: 5px;

    .top {
        height: 72px;
        position: relative;
        color: @color2;

        .first-letter {
            position: absolute;
            top: 0;
            right: 0;
            left: 0;
            bottom: 0;
            margin: auto;
            font-size: 22px;
            width: 33px;
            height: 33px;
            text-align: center;
            line-height: 33px;
            border: 1px solid @color2;
        }
    }

    .bottom {
        height: 101px;
        background: @color2;
        position: relative;
        padding: 10px;

        .name {
            color: @color4;
            display: block;
            display: -webkit-box;
            max-height: 40px; /* Fallback for non-webkit */
            font-size: 16px;
            line-height: 20px;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            -ms-text-overflow: ellipsis;
            -o-text-overflow: ellipsis;
            text-overflow: ellipsis;
        }

        &:before {
            content: "";
            bottom: 0;
            right: 0 /*rtl:ignore*/;
            height: 42px;
            width: 42px;
            position: absolute;
            background: @backgroundColor;
        }

        &:after {
            content: '';
            display: block;
            right: 0 /*rtl:ignore*/;
            bottom: 0;
            position: absolute;
            border-style: solid;
            border-width: 39px 39px 0 0 /*rtl:ignore*/;
            border-color: @color2 transparent;
        }
    }



    .details {
        display: none;
        height: 325px;
        background: #484F56;
        padding: 10px;
        color: #fff;
        direction: ltr /*rtl:ignore*/;
        position: relative;



        .first-letter {
            width: 50px;
            height: 50px;
            line-height: 30px;
            font-size: 30px;
            text-align: center;
            padding: 10px;
            margin-top: 15px;
        }

        .name {
            text-align: left /*rtl:ignore*/;
            display: block;
            display: -webkit-box;
            max-height: 80px; /* Fallback for non-webkit */
            font-size: 14px;
            line-height: 20px;
            -webkit-line-clamp: 4;
            -webkit-box-orient: vertical;
            overflow: hidden;
            -ms-text-overflow: ellipsis;
            -o-text-overflow: ellipsis;
            text-overflow: ellipsis;
        }

        .more {
            position: absolute;
            bottom: 10px;
        }
    }

    .stats {
        width: 100%;
        height: 38px;
        color: @color2;
        font-size: 14px;
        padding: 12px;
    }
}

.item {
    border: 1px solid #42494F;
    padding: 5px 5px 0;
    display: block;
    margin-bottom: 15px;

    .content {
        position: relative;
        display: inline-block;
    }

    &:hover .extra {
        top: 0;
    }

    h5 {
        font-size: 15px;
        -ms-word-break: break-word;
        word-break: break-word;
    }

    .uploader-date {
        margin-top: 75px;
    }

    .extra {
        color: #fff;
        background: #6a737d;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        bottom: 0;
        -moz-transition: all 0.5s ease;
        -o-transition: all 0.5s ease;
        -webkit-transition: all 0.5s ease;
        transition: all 0.5s ease;
        overflow: hidden;
    }

    svg {
        vertical-align: top;
        margin-top: 5px;
    }

    .stats {
        //width: 100%;
        //height: 38px;
        color: @color2;
        font-size: 14px;
        padding: 12px;
    }
}

.item-quiz-likes {
    float: right;

    svg {
        width: 12px;
        height: 12px;
        fill: @color2;
    }
}

.item-quiz-views {
    float: left;

    svg {
        width: 14px;
        height: 14px;
        fill: @color2;
    }
}

.item-animate.ng-move,
.item-animate.ng-enter,
.item-animate.ng-leave {
    -moz-transition: all linear 0.5s;
    -o-transition: all linear 0.5s;
    -webkit-transition: all linear 0.5s;
    transition: all linear 0.5s;
}

.item-animate.ng-leave.ng-leave-active,
.item-animate.ng-move,
.item-animate.ng-enter {
    opacity: 0;
    //max-height: 0;
}

.item-animate.ng-leave,
.item-animate.ng-move.ng-move-active,
.item-animate.ng-enter.ng-enter-active {
    opacity: 1;
    // max-height: 40px;
}



.upload {



    .tab-content {
        background: #000;
        min-height: 300px;
        display: flex;
        -ms-flex-direction: column;
        -webkit-flex-direction: column;
        flex-direction: column;
        justify-content: center;
        padding: 0 20px;
    }

    .uploadSection {
        text-align: center;
        font-size: 18px;

        svg {
            fill: #fff;
            width: 80px;
            height: 80px;
        }

        .link {
            fill: #64D0FF;
        }

        span {
            display: block;
            background: #353A3F;
            border-radius: 50%;
            width: 110px;
            height: 110px;
            padding: 15px;
            margin: 0 auto;
        }
    }





    .form-horizontal {
        padding: 10px;
        font-size: 18px;
    }

    .actions {
        text-align: right;
        background-color: #000;
        padding: 20px 10px 10px 0;
    }
}

.file-upload {
    text-align: center;
    color: #677079;
    font-weight: 700;
    width: 115px;
    border: 7px solid #fff;
    height: 165px;
    font-size: 14px;
    position: relative;
    //override bootstrap
    padding: 0;
    background: #BCBCBC;
    margin: 5px;


    .progress-wrap {
        background: #fff;
        padding-bottom: 10px;
    }

    .progress {
        margin: 0 10px;
        border-radius: 0;
        height: 10px;
    }

    .btn {
        border: 1px solid #3293F6;
        padding: 5px 40px;
        font-size: 18px;
        color: #3293F6;
    }

    .check-mark {
        position: absolute;
        top: -22px;
        right: -18px;
        color: #8DC63F;
        border-radius: 50%;
        background-color: rgba(143,145,146,.8);
        padding: 5px 10px;
    }

    h5 {
        color: #8DC63F;
    }

    .file-size {
        background: #fff;
    }

    .file-upload-progress {
        height: 5px;
        margin: 0;
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
    }

    .file-name {
        width: 101px;
        height: 100px;
        position: relative;
    }
}
