.add-comment {
    @colorplaceholder: #646E77;

    ::-webkit-input-placeholder {
        color: @colorplaceholder;
    }

    :-moz-placeholder { /* Firefox 18- */
        color: @colorplaceholder;
    }

    ::-moz-placeholder { /* Firefox 19+ */
        color: @colorplaceholder;
    }

    :-ms-input-placeholder {
        color: @colorplaceholder;
    }

    .list-inline > li {
        padding: 0; //override
    }

    margin-bottom: 20px;
    background: #212427;
    padding: 10px;

    textarea {
        width: 100%;
        border: 1px solid @colorplaceholder;
        background: #212427;
        outline: none; //override
        resize: none;
        padding-left: 10px;
        height: 40px;
    }
    .actions {
        display:none;
        
    }
    &.open {
        .actions {
            display:block;
            //height: auto;
        }
        textarea {
            height:auto;
        }
    }

    input[type=checkbox] {
        display: none;

        &:checked + label svg {
            fill: red;
        }
    }

    button[type=submit] {
        .buttonBlue();
        padding: 2px 10px 0 10px;
        font-size: 13px;
        border-radius: 6px;
        margin: 5px 0 0 20px;
    }

    svg {
        width: 25px;
        height: 35px;
        vertical-align: middle;
        margin: 0 12px;
        fill: #535B63;
    }

    .file {
        &:hover {
            fill: #F9F9F9;
        }
    }

    .link {
        &:hover {
            fill: #64D0FF;
        }
    }

    .anonymous {
        width: 35px;
        height: 35px;

        &:hover {
            fill: #F9F9F9;
        }
    }
}

