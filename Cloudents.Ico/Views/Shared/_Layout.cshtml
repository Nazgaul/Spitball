@using System.Globalization
@using Cloudents.Web.Extensions
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Spitball 2.0</title>
    <link rel="shortcut icon" href="images/fav.png">

    <!-- Google Tag Manager -->
    <script>
    (function (w, d, s, l, i) {
        w[l] = w[l] || []; w[l].push({
            'gtm.start':
                new Date().getTime(), event: 'gtm.js'
        }); var f = d.getElementsByTagName(s)[0],
            j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
                'https://www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
        })(window, document, 'script', 'dataLayer', 'GTM-MZPW6S4');</script>
    <!-- End Google Tag Manager -->

    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/theme.css" />
        <link rel="stylesheet" href="~/css/vendor.bundle.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/dist/site.min.css" asp-append-version="true" />
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-100723645-3"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());

            gtag('config', 'UA-100723645-3');
        </script>

    </environment>
    @Html.Raw(ClickJackingTagHelper.FullScript)
</head>
<body lang="@CultureInfo.CurrentCulture.TwoLetterISOLanguageName" class="theme-muscari io-mascari" data-spy="scroll" data-target="#mainnav" data-offset="80">
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-MZPW6S4"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->

    @RenderBody()
    <!-- Preloader !remove please if you do not want -->
    <div id="preloader">
        <div id="loader"></div>
        <div class="loader-section loader-top"></div>
        <div class="loader-section loader-bottom"></div>
    </div>
    <!-- Preloader End -->
    <!-- JavaScript (include all script here) -->

    <environment include="Development">
        <script src="~/js/jquery.bundle.js"></script>
        <script src="~/js/script.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("script", false)
</body>
</html>
