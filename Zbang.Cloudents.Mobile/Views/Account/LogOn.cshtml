@model Zbang.Cloudents.Mobile.Models.Account.LogOn
@using Zbang.Cloudents.Mobile.Views.Account.Resources

@using (Html.BeginForm("LogIn", "Account", new { ViewBag.returnUrl }, FormMethod.Post, new { id = "login" })
   )
{
    Html.EnableClientValidation(false);
    Html.EnableUnobtrusiveJavaScript(false);
    
    Html.RenderAction("AntiForgeryToken", "Home", true);

    @Html.TextBoxFor(model => model.Email, new { @class = "inputText", placeholder = @MobileResources.Email })
    @Html.PasswordFor(model => model.Password, new { @class = "inputText", placeholder = @MobileResources.Password })

    <input class="btn1" type="submit"  value="@MobileResources.LogIn"  />

}